# $Id: Portfile,v 1.19 2003/08/27 22:38:53 waqar Exp $

PortSystem 1.0
name		gnupg
version		1.2.3
categories	mail security
maintainers	waqar@opendarwin.org
description	GNU pretty-good-privacy package
long_description	GnuPG is a complete and free replacement \
			for PGP. Because it does not use the \
			patented IDEA algorithm, it can be used \
			without any restrictions. GnuPG is a \
			RFC2440 (OpenPGP) compliant application.
platforms	darwin freebsd
use_bzip2	yes
master_sites	ftp://ftp.gnupg.org/gcrypt/gnupg/ \
		ftp://ftp.planetmirror.com/pub/gnupg/ \
		ftp://gd.tuwien.ac.at/privacy/gnupg/gnupg/ \
		ftp://ftp.jyu.fi/pub/crypt/gcrypt/gnupg/ \
		ftp://ftp.freenet.de/pub/ftp.gnupg.org/gcrypt/gnupg/
checksums	md5 cdca1282d7901f9ddb52f9725b001af2
configure.args	--disable-asm --disable-dynload
test.run	yes
test.dir	${worksrcpath}/checks
test.target 	check
variant tiger { configure.args-append --enable-tiger }
variant new-tiger { configure.args-append --enable-new-tiger }
variant idea {  patch_sites-append	http://www.gnupg.dk/contrib-dk/
	  	patchfiles 	idea.c.gz
	  	checksums-append \
	      			idea.c.gz md5 9dc3bc086824a8c7a331f35e09a3e57f
	  	patch.dir 	${worksrcpath}/cipher
	  	patch.cmd 	cat
	   	patch.pre_args 	> idea.c] }
