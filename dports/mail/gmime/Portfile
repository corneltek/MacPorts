# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id$

PortSystem      1.0

name            gmime
version         2.6.18
set branch      [join [lrange [split ${version} .] 0 1] .]

description     GMime is a C/C++ library for parsing and creating messages using \
                the Multipurpose Internet Mail Extension (MIME)

long_description \
                ${description}

maintainers     nomaintainer
categories      mail
license         LGPL-2.1+
platforms       darwin
homepage        http://spruce.sourceforge.net/gmime/
master_sites    gnome:sources/${name}/${branch}

use_xz          yes

checksums       rmd160  4e6214e67cdf22e7571bb0ea4752f2c614827921 \
                sha256  783fc14190459c568a31c2fd6dba1e8afa0431e2931aa46f652aa486ad881ae6

depends_build   path:bin/pkg-config:pkgconfig

depends_lib     port:libgpg-error \
                port:gpgme \
                port:gobject-introspection \
                port:vala \
                port:libiconv \
                path:lib/pkgconfig/glib-2.0.pc:glib2 \
                port:gettext \
                port:zlib

configure.args  --enable-introspection=yes \
                --enable-vala=yes \
                --enable-cryptography \
                --enable-smime \
                --disable-mono

test.run        yes
test.target     check

livecheck.type  gnome
