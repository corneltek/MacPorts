# $Id$

PortSystem 1.0

name                mpop
version             1.0.29
categories          mail
platforms           darwin
maintainers         mww
license             GPL-3+
description         small and fast POP3 client
long_description    mpop is a small and fast POP3 client with header based \
                    mail filtering capabilities.

homepage            http://mpop.sourceforge.net/
master_sites        sourceforge
checksums           md5     468a145812123524b8ebc57f12ec4405 \
                    sha1    489ff6ae4d662af4179d9affc86e79db94ed95b5 \
                    rmd160  2939c5910f0b6944d22c0de85724d33e3ac4615e
use_bzip2           yes

depends_build       port:pkgconfig
depends_lib         port:gnutls port:gettext port:libgsasl

configure.ldflags-append "-lintl"

configure.args      --with-libiconv-prefix=${prefix} \
                    --with-ssl=gnutls \
                    --mandir=${prefix}/share/man \
                    --infodir=${prefix}/share/info
