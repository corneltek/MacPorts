# $Id: Portfile,v 1.10 2004/02/19 04:09:41 yeled Exp $

PortSystem 1.0
name		wtf
version		20040124
categories	games
maintainers	yeled@opendarwin.org
description	translates common Internet acronyms
platforms	darwin freebsd

master_sites	http://www.mu.org/~mux/wtf/
checksums	md5 cb2804fc42706fef284526f5a015c843

configure {}

build {
	cd ${worksrcpath}
	reinplace "s|/usr|${prefix}|g" wtf wtf.6
}

destroot {
	cd ${worksrcpath}

	xinstall -m 555 wtf ${destroot}${prefix}/bin
	xinstall -m 444 wtf.6 ${destroot}${prefix}/man/man6

	set shareDir ${destroot}${prefix}/share/misc
	file mkdir ${shareDir}
	xinstall -m 444 acronyms ${shareDir}
	xinstall -m 444 acronyms.comp ${shareDir}
}
