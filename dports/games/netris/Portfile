PortSystem 1.0
name		netris
version		0.5
categories	games
maintainers	kevin@opendarwin.org
description	networked tetris on the console
platforms	darwin
master_sites	ftp://ftp.netris.org/pub/netris/
checksums	md5 a30c950fd4e4779a26f856bc7cd1aaff

configure {
	system "cd \"${worksrcpath}\" && \"${worksrcpath}/Configure\""
}

install {
	system "install -cp -o root -g wheel -m 555 ${worksrcpath}/netris ${prefix}/bin"
	system "install -cp -o root -g wheel -m 555 ${worksrcpath}/sr ${prefix}/bin"
}

contents {
	bin/netris
	bin/sr
}
