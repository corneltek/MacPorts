PortSystem 1.0
name		netris
version		0.5
categories	games
maintainers	kevin@opendarwin.org
description	networked tetris on the console
platforms	darwin
master_sites	ftp://ftp.netris.org/pub/netris/
checksums	md5 a30c950fd4e4779a26f856bc7cd1aaff

configure {
	system "cd \"${worksrcpath}\" && \"${worksrcpath}/Configure\""
}

install {
	system "mkdir -m 0755 ${destroot}/bin"
	system "chown root:wheel ${destroot}/bin"
	system "install -cp -o root -g wheel -m 0555 ${worksrcpath}/netris ${destroot}/bin"
	system "install -cp -o root -g wheel -m 0555 ${worksrcpath}/sr ${destroot}/bin"
}

contents {
	bin/netris
	bin/sr
}
