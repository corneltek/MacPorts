package require port 1.0
name		shntool
version		1.2.0
revision	0
categories	audio
maintainers	jpm@opendarwin.org
description	Multi-purpose .wav/.shn processing utility
long_description	shntool is a multi-purpose .wav/.shn processing \
	tool.  Input and output files are transparent to shntool, meaning \
	that it can perform its functions upon both .wav and .shn data.
platforms	darwin
master_sites	http://etree.org/shnutils/shntool/source/
checksums	md5 753df4a3e90db8ec4661eb2b1f74baa7
depends_lib		lib:libexpat.0:expat lib:libintl.1:gettext \
	lib:libiconv.2:libiconv bin:shorten:shorten
contents {
	bin/shncat
	bin/shncmp
	bin/shnconv
	bin/shnfix
	bin/shninfo
	bin/shnjoin
	bin/shnlen
	bin/shnsplit
	bin/shnstrip
	bin/shntool
	man/man1/shntool.1
}
