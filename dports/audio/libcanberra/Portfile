PortSystem          1.0

name                libcanberra
version             0.29
license             LGPL-2.1+
categories          audio devel
maintainers         nomaintainer
description         XDG sound theme and naming implementation
long_description    libcanberra is an implementation of the XDG Sound Theme \
                    and Name Specifications, for generating event sounds on \
                    free desktops, such as GNOME.
homepage            http://0pointer.de/lennart/projects/libcanberra/
platforms           darwin
master_sites        ${homepage}
use_xz              yes

checksums           rmd160  a1fe15a7ce0a63ab3e5cc312a34ffe575775c0c1 \
                    sha256  127a5ef07805856d63758e5180ebfb241d1f80094fd301c287591a15b8cfcd72

depends_build       port:pkgconfig

depends_lib         port:gstreamer \
                    port:libtool \
                    port:libvorbis

patchfiles          patch-configure.diff \
                    patch-gtkquartz.diff \
                    LC_CTYPE.patch

configure.args      --disable-alsa \
                    --disable-gtk-doc \
                    --disable-gtk3 \
                    --disable-oss \
                    --disable-lynx \
                    --disable-null \
                    --disable-pulse \
                    --disable-silent-rules \
                    --disable-tdb \
                    --disable-udev \
                    --enable-gtk

livecheck.type      regex
livecheck.regex     libcanberra-(\[0-9.\]+)${extract.suffix}
