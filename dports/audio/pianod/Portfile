                    port:libgcrypt \
                    port:gnutls \
                    port:json-c \
                    port:faad2 \
                    port:libmad

patchfiles          patch-json-c-0.12.diff

use_autoreconf      yes

startupitem.create      yes
startupitem.logfile     ${prefix}/var/log/pianod.log
