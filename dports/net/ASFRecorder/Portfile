# $Id: Portfile,v 1.4 2004/01/17 22:32:24 toby Exp $

PortSystem      1.0
name            ASFRecorder
version         1.1
homepage        http://asfrecorder.sourceforge.net
description     WindowsMedia Streaming client
categories      net
platforms       darwin freebsd
maintainers     digdog@opendarwin.org
master_sites    sourceforge:asfrecorder
distname        ASFRecorder
use_zip         yes
checksums       md5 c0cd281b9f72479945058735d8eff8a2
configure       {}
build           {cd ${workpath}/${name}/source;
                  system "cc -o ${name} asfrecorder.c"}
destroot        {cd ${workpath}/${name}/source;
                  system "install -c ASFRecorder ${destroot}/${prefix}/bin"}
