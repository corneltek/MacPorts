# $Id: Portfile,v 1.1 2003/03/17 00:55:29 landonf Exp $

PortSystem 1.0
name			cvsup
version			16.1g
categories		net devel
maintainers		landonf@opendarwin.org
description		General network file distribution system optimized for CVS
platforms		darwin
depends_lib		bin:cm3:cm3
master_sites		ftp://ftp3.FreeBSD.org/pub/FreeBSD/development/CVSup/sources/
distname		cvsup-snap-${portversion}
checksums		md5 253e773eb9d213f9bf3ce12acef184e8

# Mark install target as .PHONY because HFS+ case insensitivity
# screws us over yet again.
patchfiles		patch-Makefile

configure		{}
build.args		PREFIX=${prefix} M3=cm3 M3FLAGS=-DNOGUI\\ -DM3STATIC
install.args		PREFIX=${destroot}/${prefix}/ M3=cm3

# Add ${prefix}/cm3/bin to our path
set env(PATH) "$env(PATH):${prefix}/cm3/bin"
