# $Id: Portfile,v 1.1 2004/01/08 16:08:02 toby Exp $

PortSystem       1.0
name             aget
version          0.4
categories       net
maintainers      tp62@cornell.edu
description      multithreaded HTTP download accelerator
long_description \
    Aget is a multithreaded HTTP download accelerator, \
    similar to the Win32 Project Flashget.
homepage         http://www.enderunix.org/aget/
platforms        darwin
master_sites     ${homepage}
checksums        md5 1d32390f5ea2ddd82dfbb1794cdfa92f
configure {
    reinplace "s| -pthread||" "${worksrcpath}/Makefile"
}
destroot {
    system "install -s -o root -m 555 ${worksrcpath}/aget ${destroot}${prefix}/bin"
}
