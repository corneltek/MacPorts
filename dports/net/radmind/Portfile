PortSystem 1.0
name		radmind
version		0.9.1
revision	0
categories	net
maintainers	jpm@opendarwin.org
description	Remotely administer the file systems of multiple unix machines
long_description	XXX
platforms	darwin
master_sites	http://rsug.itd.umich.edu/software/radmind/files/
checksums	md5 26713299e317391b3c110469cfa312a2
extract.sufx	.tgz
configure.args	--with-radmind-var=${prefix}/var/radmind
post-install {
	set path "${prefix}/man/"
	
	reinplace "s|/var/radmind|${prefix}/var/radmind|g" "${path}/man1/fsdiff.1"
	reinplace "s|/var/radmind|${prefix}/var/radmind|g" "${path}/man1/ktcheck.1"
	reinplace "s|/var/radmind|${prefix}/var/radmind|g" "${path}/man1/lapply.1"
	reinplace "s|/var/radmind|${prefix}/var/radmind|g" "${path}/man1/lcksum.1"
	reinplace "s|/var/radmind|${prefix}/var/radmind|g" "${path}/man1/lcreate.1"
	reinplace "s|/var/radmind|${prefix}/var/radmind|g" "${path}/man1/lfdiff.1"
	reinplace "s|/var/radmind|${prefix}/var/radmind|g" "${path}/man1/lmerge.1"
	reinplace "s|/var/radmind|${prefix}/var/radmind|g" "${path}/man1/twhich.1"
	reinplace "s|/var/radmind|${prefix}/var/radmind|g" "${path}/man5/applefile.5"
	reinplace "s|/var/radmind|${prefix}/var/radmind|g" "${path}/man8/radmind.8"
}
contents {
	bin/fsdiff
	bin/ktcheck
	bin/lapply
	bin/lcksum
