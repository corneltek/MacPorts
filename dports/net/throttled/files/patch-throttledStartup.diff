--- throttledStartup/throttledStartup	Mon Jul  7 02:47:22 2003
+++ ../../throttledStartup	Thu Jul 24 09:57:49 2003
@@ -1,4 +1,22 @@
 #!/bin/sh
+case $1 in
 
-# Start throttled
-/usr/local/sbin/throttled-startup init &
+start)
+	/sbin/ipfw -f flush && /usr/local/sbin/throttled-startup && echo -n ' throttled'
+	;;
+
+stop)
+	pid=`ps ax | awk '{if (match($5, ".*/throttled$") || $5 == "throttled") print $1}'`
+	if test "$pid" != ""; then
+		kill -HUP ${pid}
+	fi
+	;;
+
+restart)
+	${0} stop && ${0} start
+	;;
+
+*)
+	echo "Usage: `basename ${0}` {start|stop|restart}"
+	;;
+esac
