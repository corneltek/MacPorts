# $Id$

PortSystem                  1.0
PortGroup                   github 1.0

github.setup                krb5 krb5 1.11-final krb5-
name                        kerberos5
version                     1.11
revision                    1
conflicts                   fbopenssl
set branch                  [join [lrange [split ${version} .] 0 1] .]
categories                  net security
maintainers                 nomaintainer
license                     MIT BSD ISC OpenLDAP-2.8+
platforms                   darwin
homepage                    http://web.mit.edu/kerberos/

description                 Kerberos is a network authentication protocol.

long_description            Kerberos is a network authentication protocol. \
                            It is designed to provide strong authentication \
                            for client/server applications by using secret-key \
                            cryptography. A free implementation of this protocol \
                            is  available from the Massachusetts Institute of \
                            Technology. Kerberos is available in many commercial \
                            products as well.

checksums                   rmd160  58a6d14d2de4a64e7f5de553128604dfd9c50832 \
                            sha256  ec76cbedf5199e288379d0f3d7510445b36ec9b8002cf500b91a6daacb7fb5d5

depends_lib                 port:openssl \
                            port:libcomerr \
                            port:libedit

worksrcdir                  krb5-krb5-af092d6/src

compiler.blacklist          clang

use_autoreconf              yes
# kerberos5 fails to build in its own presence, see #23769, #37944
configure.cppflags-delete   -I${prefix}/include
configure.ldflags-delete    -L${prefix}/lib
configure.args              --mandir=${prefix}/share/man \
                            --with-system-et \
                            --without-system-db \
                            --without-hesiod \
                            --without-ldap \
                            --without-tcl \
                            --with-crypto-impl=openssl \
                            --with-pkinit-crypto-impl=openssl \
                            --with-libedit \
                            --without-readline \
                            --without-system-verto \
                            --without-system-ss

post-configure {
    reinplace -E {s|-arch [^ ]+||g} \
        ${worksrcpath}/krb5-config
}

livecheck.regex             krb5-(\[0-9.\]+)-signed.tar
livecheck.version           ${version}
livecheck.type              regex
livecheck.url               http://web.mit.edu/kerberos/dist/index.html
