PortSystem 1.0
name		ethereal
version		0.9.8
categories	net
maintainers	eric@opendarwin.org
description	Graphical network analyzer and capture tool
platforms	darwin
use_bzip2	yes
master_sites	ftp://ftp.ethereal.com/pub/ethereal/ \
		ftp://gd.tuwien.ac.at/infosys/security/ethereal/ \
		ftp://ftp.sunet.se/pub/network/monitoring/ethereal/
checksums	md5 bdb9bd209c8c5df438abe761bd243109
depends_lib	lib:libgtk.1:gtk

pre-configure	{ cd ${workpath}/${worksrcdir}
		  system "autoconf"
		  cd ${workpath}/${worksrcdir}/epan
		  system "autoconf"
		  cd ${workpath}/${worksrcdir}/wiretap
		  system "autoconf" }

contents	bin/editcap \
		bin/ethereal \
		bin/idl2eth \
		bin/mergecap \
		bin/tethereal \
		bin/text2pcap \
		etc/diameter/dictionary.dtd \
		etc/diameter/dictionary.xml \
		etc/diameter/mobileipv4.xml \
		etc/diameter/nasreq.xml \
		etc/diameter/sunping.xml \
		etc/manuf \
		man/man1/editcap.1 \
		man/man1/ethereal.1 \
		man/man1/idl2eth.1 \
		man/man1/mergecap.1 \
		man/man1/tethereal.1 \
		man/man1/text2pcap.1
