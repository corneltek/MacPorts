# $Id: Portfile,v 1.1 2003/12/30 11:19:46 matt Exp $

PortSystem 1.0
name			tnftpd
version			2.0-beta3
categories		net
platforms		darwin
maintainers		matt@opendarwin.org
description		Port of the NetBSD FTP server

long_description	tnftp is a port of the NetBSD FTP server to other systems. \
			It offers many enchancements over the traditional BSD ftpd, \
			including per-class configuration directives via tnftpd.conf(5), \
			RFC 2389 and draft-ietf-ftpext-mlst-11 support, IPv6, transfer \
			rate throttling, and more. tnftpd was formerly known as lukemftpd, \
			and earlier versions are present in Mac OS X 10.2 (as ftpd) and \
			FreeBSD 5.0 (as lukemftpd).

master_sites		ftp://ftp.netbsd.org/pub/NetBSD/misc/tnftp/

checksums		md5 2c70bdc6549f88f992191ebe772629a7

destroot {		file copy ${worksrcpath}/src/tnftpd ${destroot}${prefix}/sbin
			file copy ${worksrcpath}/src/ftpd.8 \
			${destroot}${prefix}/share/man/man8/tnftpd.8
			file copy ${worksrcpath}/src/ftpd.conf.5 \
			${destroot}${prefix}/share/man/man5/tnftpd.conf.5
			file mkdir ${destroot}${prefix}/share/doc/${name}
			file copy ${worksrcpath}/README ${worksrcpath}/THANKS \
			${destroot}${prefix}/share/doc/${name}
			}
			
variant noipv6		{ configure.args --disable-ipv6 }
			
# Notify the user how to launch the ftpd
post-install {		ui_msg "\nA small tweak to '/etc/xinetd.d/ftp'"
			ui_msg "is needed in order to use tnftpd.\n"
			}

