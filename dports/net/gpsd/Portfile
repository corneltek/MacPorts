# $Id: Portfile,v 1.1 2004/02/09 02:21:00 ssen Exp $

PortSystem 1.0
name		gpsd
version		1.10
revision	1
set libver      1
categories	net
maintainers	shadow@dementia.org
description	gps multiplexor daemon
long_description	\
	gpsd is a small daemon multiplexes output or information from a GPS \
        receiver.
homepage	http://www.pygps.org/gpsd/
platforms	darwin
master_sites	http://www.pygps.org/gpsd/downloads
checksums	md5 064a443c2d885bd2dce4b7ba893cdfaa
depends_lib	lib:libX11.6:XFree86 lib:libXm.3:openMotif
patchfiles	patch.gpsd

destroot   { cd ${worksrcpath}
                  system "install -m 755 -d \
                    ${destroot}${prefix}/libexec"
                  system "install -m 755 -d \
                    ${destroot}${prefix}/bin"
                  system "install -m 755 -c \
                    gpsd ${destroot}${prefix}/libexec"
                  system "install -m 755 -c \
                    gps xgpsspeed ${destroot}${prefix}/bin" }
