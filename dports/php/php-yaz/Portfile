if {${name} != ${subport}} {
    depends_lib-append  port:re2c port:yaz
    
    # yaz-1.1.2.tgz is corrupted; see https://bugs.php.net/bug.php?id=62416
    # This flag ignores the corruption.
    extract.post_args-append --ignore-zeros
}
