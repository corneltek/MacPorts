PortSystem              1.0
PortGroup               php 1.1

name                    php-event
version                 1.7.6
categories-append       devel
platforms               darwin
maintainers             ryandesign openmaintainer
license                 PHP-3.01

php.branches            5.4 5.5
php.pecl                yes

description             efficiently schedule I/O, time and signal based events

long_description        PECL extension to ${description} using libevent.

checksums               rmd160  d9778945ad133a4f74abf150b585bd7c932b6111 \
                        sha256  44cd2994d247d8d5c862c870390d684b2b15a04a9483ae8663aed1fb87d2e4c4

if {${name} ne ${subport}} {
    depends_lib-append  port:libevent \
                        port:openssl \
                        port:${php}-sockets

    configure.args-append \
                        --with-event-libevent-dir=${prefix} \
                        --with-openssl-dir=${prefix}

    configure.cflags-append \
                        -DHAVE_SOCKETS
}
