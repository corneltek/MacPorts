PortSystem          1.0
PortGroup           php5pear 1.0

php5pear.setup      Inline_C 0.1
revision            1
categories-append   net www
platforms           darwin
maintainers         pixilla openmaintainer

description         PEAR Inline_C package
long_description    ${description}

checksums           sha1    57bcdf4d80d6b52a4e47ce765772f9c57a8a4afb \
                    rmd160  8bf21ba99a94930da346d69797f69e4445bdaef3

post-patch {
    move ${php5pear.sourceroot}/Inline_C.php.in \
            ${php5pear.sourceroot}/Inline_C.php
    reinplace "s|role=\"php\" ||g" \
            ${php5pear.sourceroot}/package.xml
    reinplace "s|name=\"Inline_C.php.in\"|name=\"Inline_C.php\" role=\"php\"|g" \
            ${php5pear.sourceroot}/package.xml
    reinplace "s|name=\"Inline_C.xml\"|name=\"Inline_C.xml\" role=\"doc\"|g" \
            ${php5pear.sourceroot}/package.xml
    reinplace -E "s|name=\"mkbuildtree\.(\[^\"\]+)\"|name=\"mkbuildtree.\\1\" role=\"doc\"|g" \
            ${php5pear.sourceroot}/package.xml
    reinplace "s|name=\"test.php\"|name=\"test.php\" role=\"test\"|g" \
            ${php5pear.sourceroot}/package.xml
}
