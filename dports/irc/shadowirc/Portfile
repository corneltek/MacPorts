configure	{}

build.type	pbx
build.target.all ""
build.args	-buildstyle Deployment
build.target.install install DSTROOT=/

# Work around bug in plugins code
post-install { file mkdir /Applications/ShadowIRC.app/Contents/MacOS/Plugins }

contents	/Applications/ShadowIRC.app
registry.contents_recurse	yes
