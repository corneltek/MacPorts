# $Id: Portfile,v 1.1 2003/04/08 23:29:24 fkr Exp $

PortSystem 1.0
name		silc-client	
version		0.9.12.1	
categories	irc	
description	client for the silc-network.
long_description	silc-client is a client for the SILC (Secure Internet \
			Live Conferencing) protocol. SILC provides secure \
			conferencing services in the Internet over insecure channel. 
homepage	http://silcnet.org/
platforms	darwin
maintainers	fkr@opendarwin.org
master_sites	http://silcnet.org/download/client/sources/
checksums	md5 d23496c41f2f95fc9e79fc78de6383ff

depends_lib	lib:libglib.1:glib
depends_run	bin:perl:perl5.8

configure.args	--with-doc-dir=${prefix}/share/${name} \
		--with-helpdir=${prefix}/share/${name} \
		--with-simdir=${prefix}/share/${name} \
		--with-logsdir=${prefix}/var/log/${name} \
		--disable-asm
