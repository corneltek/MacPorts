# $Id: Portfile,v 1.1 2003/10/08 23:17:39 landonf Exp $

PortSystem 1.0

name		ksh93
version		2003-07-24
categories	shells
maintainers	jkh@opendarwin.org
description	The AT&T Korn shell
long_description The official version of ksh-93, by David Korn and AT&T research
platforms	darwin
master_sites	http://www.research.att.com/sw/download/tgz/


distfiles	ast-ksh.$version.tgz INIT.$version.tgz
checksums	ast-ksh.$version.tgz md5 e8c764fb40c8720c105448da406b5e9b \
		INIT.$version.tgz md5 aabd19505eba0ac65a4ff450ab7a935b

extract.dir	${worksrcpath}

pre-extract {
	file mkdir ${worksrcpath}
}

configure {}

build.dir	${extract.dir}
build.cmd	bin/package
build.target	make

destroot {
	set arch [exec ${worksrcpath}/bin/package host]
	system "install -m 755 ${worksrcpath}/arch/${arch}/bin/ksh ${destroot}${prefix}/bin"
        system "install -m 755 ${worksrcpath}/arch/${arch}/man/man1/sh.1 ${destroot}${prefix}/man/man1/ksh.1"
}
