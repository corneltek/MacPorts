PortSystem 1.0
name		tin
version		1.4.6
platforms	darwin
categories	news
maintainers	ports@syrius.org
description	tin is a threaded NNTP and spool based UseNet newsreader
long_description	tin is a full-screen easy to use Usenet reader. It can read news \
			locally or remotely via a NTTP (Network News Transport Protocol) \
			server. It will automatically utilize NOV (News OVerview) style \
			index files if available locally or via the NNTP XOVER command.
master_sites	ftp://ftp.tin.org/tin/v1.4/
checksums	md5 6c72c92c715fbd875b953e9dbfec7744
build.cmd	make build
configure.args	--enable-break-long-lines \
		--with-coffee \
		--disable-locale \

contents \
	 bin/rtin \
	 bin/tin \
	 man/man1/tin.1

variant unstable {
	version		1.5.15
	checksums	md5 949f05d960dd37cf5872ff4483f94a6b
	master_sites	ftp://ftp.tin.org/tin/v1.5/
	contents \
		bin/tin \
		bin/rtin \
		bin/url_handler.sh \
		bin/metamutt \
		bin/w2r.pl \
		man/man1/tin.1 \
		man/man1/rtin.1 \
		man/man1/w2r.pl.1 \
		man/man5/mbox.5 \
		man/man5/mmdf.5 \
		man/man5/tin.5 \
		share/locale/de/LC_MESSAGES/tin.mo \
		share/locale/en_GB/LC_MESSAGES/tin.mo \
		share/locale/et/LC_MESSAGES/tin.mo \
		share/locale/de/LC_MESSAGES \
		share/locale/en_GB/LC_MESSAGES \
		share/locale/et/LC_MESSAGES \
		share/locale/de \
		share/locale/en_GB \
		share/locale/et
}
