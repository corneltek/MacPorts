PortSystem 1.0
name			w3m
version			0.3.1
categories		www
maintainers		charlie@rubberduck.com
description		pager/text based browser
long_description	w3m is a pager/text-based WWW browser. \
			It is a similar application to Lynx, but it has several features Lynx \
			doesn't have, like tables and frames.
platforms		darwin
default_variants	+m17n
master_sites	http://us.dl.sourceforge.net/sourceforge/w3m/
checksums		md5 825f792dfda9416ffa24e3ac30bdd268
configure.args	--yes --suffix= --model=custom --use_ansi_color=y --lang=en

include contents

variant m17n {
	version		0.3.1-m17n-20020717
	description	multilingual pager/text based browser
	master_sites	http://www2u.biglobe.ne.jp/~hsaka/w3m/patch/
	checksums	md5 b93d1f8caa780b7128e0a9b10e9fcae0
	configure.args-append	--charset=UTF-8
}
