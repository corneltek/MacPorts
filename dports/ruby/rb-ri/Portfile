# $Id: Portfile,v 1.1 2004/01/17 04:28:23 rshaw Exp $
PortSystem 1.0

name			rb-ri
version			1.8b
categories		ruby
maintainers		rshaw@opendarwin.org
description		Ruby Information at your fingertips
long_description	Command line script to report various informational \
					output on classes, methods, etc. Can tell you what \
					parameters a method accepts, how to use a particular \
					method, what classes define a particular method, or a \
					synopsys on a particular module.
homepage		http://rdoc.sourceforge.net/
platforms		darwin
master_sites	sourceforge:rdoc
distname		ri-${version}
worksrcdir		ri
extract.suffix	.tgz
checksums		md5 8ddf656741badc0e8b63385f4bc93381

set ruby ${prefix}/bin/ruby
depends_build	bin:${ruby}:ruby

use_configure	no
build			{}
destroot.cmd	${ruby} install.rb 
destroot.env	DESTDIR=${destroot}
destroot.target
destroot.destdir

