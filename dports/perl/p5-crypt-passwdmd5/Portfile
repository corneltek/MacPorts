    depends_build-append \
                    bin:iconv:libiconv

    post-patch {
        system -W ${worksrcpath} "iconv -f ISO-8859-1 -t UTF-8 Makefile.PL > Makefile.PL.new && mv Makefile.PL.new Makefile.PL"
    }
