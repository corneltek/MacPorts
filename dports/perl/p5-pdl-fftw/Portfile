if {${perl5.major} != ""} {
    depends_lib-append \
                    port:fftw \
                    port:p${perl5.major}-pdl

    patchfiles      patch-fftw.conf.diff

    post-patch {
        reinplace "s|__PREFIX__|${prefix}|" ${worksrcpath}/fftw.conf
    }
