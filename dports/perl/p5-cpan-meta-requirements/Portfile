PortSystem          1.0
PortGroup           perl5 1.0

perl5.branches      5.8 5.10 5.12 5.14 5.16 5.18 5.20
perl5.setup         CPAN-Meta-Requirements 2.128
license             {Artistic-1 GPL}
maintainers         nomaintainer
description         a set of version requirements for a CPAN dist
long_description    ${description}

platforms           darwin

checksums           rmd160  6cadef6bb68eadeffa6ccb3e05172bee6eb9cc5c \
                    sha256  ff0ae309ed76d8c7381fdb8436659a594e6884eeac1c9a742ba9aa7ee2a1d52d

supported_archs     noarch

if {${perl5.major} != ""} {
    depends_lib-append  port:p${perl5.major}-scalar-list-utils \
                        port:p${perl5.major}-version

    if {[vercmp ${perl5.major} 5.12] < 0} {
        configure.env-append \
                    PERL_NO_HIGHLANDER=1
    }
}
