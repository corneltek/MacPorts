if {${perl5.major} != ""} {
    depends_lib-append \
                    port:openssl \
                    port:p${perl5.major}-crypt-openssl-bignum \
                    port:p${perl5.major}-crypt-openssl-ec

    configure.env-append \
                    OPENSSL_PREFIX=${prefix}
}
