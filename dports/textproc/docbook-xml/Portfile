PortSystem 1.0

name		docbook-xml
version		4.2
description	the docbook xml dtds
categories	textproc

master_sites	http://www.oasis-open.org/docbook/xml/4.2/
checksums	md5 73fe50dfe74ca631c1602f558ed8961f

use_zip
extract.sufx	.zip
extract.cmd	unzip

configure 	{}
build		{}

install		{ system "mkdir -p ${prefix}/share/xml/${name}/${version}"
		  system "for file in \
		  `unzip -l ${distpath}/${distname} | awk '/:\[0-9\].*\[^\\/\]\$/\{print \$4\}'`; do \
                  	install -cv ${workdir}/\$file ${prefix}/share/xml/${name}/${version}; \
        	  done" }

include contents
