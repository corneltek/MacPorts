# $Id: Portfile,v 1.3 2003/07/19 16:52:04 fkr Exp $

PortSystem 1.0
name		iso8879
version		1986
categories	textproc
maintainers	mij@opendarwin.org
description	Character entity sets from ISO 8879:1986 (SGML)
platforms	darwin

long_description $description

master_sites	ftp://ftp.FreeBSD.org/pub/FreeBSD/distfiles/

distname	isoENTS
extract.sufx	.zip
checksums	md5 c8a9561212c1a2ec6e48919640de9c67

use_zip		yes

depends_run	bin:mkcatalog:mkcatalog

configure	{}
build		{}

set instdir	share/sgml/iso8879

install		{ system "install -m 755 -d \
		    ${destroot}${prefix}/${instdir}"
		  system "install -m 644 ${portpath}/${filedir}/catalog \
		    ${destroot}${prefix}/${instdir}"
		  system "install -m 644 ${workpath}/ISO* \
		    ${destroot}${prefix}/${instdir}" }

install.args	prefix=${destroot}${prefix}
