PortSystem 1.0
name		aspell-dict-de
version		0.50
categories	textproc
maintainers	mij@opendarwin.org
description	German dictionary for aspell
platforms	darwin

long_description Aspell with German dictionary.

master_sites	ftp://ftp.gnu.org/gnu/aspell/

distname	aspell-de-${portversion}-2
checksums	md5 204a9737ff0110fb8c7d284bd7200f7d

use_bzip2	yes

depends_build	bin:aspell:aspell

configure	{ system "cd ${worksrcpath} && ./configure \
		    --vars ASPELL=${prefix}/bin/aspell \
		    WORD_LIST_COMPRESS=${prefix}/bin/word-list-compress" }

contents	share/aspell/de-only.rws \
		share/aspell/de.dat \
		share/aspell/de.multi \
		share/aspell/de_CH-only.rws \
		share/aspell/de_CH.multi \
		share/aspell/de_DE-only.rws \
		share/aspell/de_DE.multi \
		share/aspell/de_phonet.dat \
		share/aspell/deutsch.alias \
		share/aspell/german.alias \
		share/aspell/swiss.alias
