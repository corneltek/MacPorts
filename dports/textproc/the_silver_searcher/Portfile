post-destroot {
    xinstall -d -m 755 ${destroot}${prefix}/share/bash-completion/completions
    move \
        ${destroot}${prefix}/share/${name}/completions/ag.bashcomp.sh \
        ${destroot}${prefix}/share/bash-completion/completions/ag
}
