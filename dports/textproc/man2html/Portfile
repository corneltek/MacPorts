PortSystem 1.0
name		man2html
version		3.0.1
categories	textproc
maintainers	mij@opendarwin.org
description	Convert nroff man pages to HTML
platforms	darwin

long_description man2html is a utility to convert UNIX nroff manual \
		 pages into HTML format.

master_sites	ftp://ftp.gpad.ac.ru/pub/FreeBSD/distfiles/ \
		http://soupnazi.org/downloads/

distname	${portname}${portversion}
checksums	md5 1c0d28c83225d0ebc845f2386c8f8384

patchfiles	patch-man.cgi

configure	{}

post-configure	{ reinplace "s|/usr/local/bin/perl|/usr/bin/perl|" \
		    ${worksrcpath}/man2html
		  reinplace "s|/usr/local/bin/perl|/usr/bin/perl|" \
		    ${worksrcpath}/man.cgi }

build		{}

install		{ system "install -o root -m 755 ${worksrcpath}/man2html \
		    ${prefix}/bin"
		  system "install -o root -m 644 ${worksrcpath}/doc/man2html.1 \
		    ${prefix}/man/man1"
		  system "install -o root -m 755 ${worksrcpath}/man.cgi \
		    /Library/WebServer/CGI-Executables" }

contents	bin/man2html \
		man/man1/man2html.1 \
		/Library/WebServer/CGI-Executables/man.cgi
