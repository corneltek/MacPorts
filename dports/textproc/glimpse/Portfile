configure.args  --enable-strip
patchfiles	patch-Makefile.in patch-top-Makefile.in
build.args	LDFLAGS=-L${prefix}/lib

destroot.destdir bindir=${destroot}${prefix}/bin libdir=${destroot}${prefix}/lib mandir=${destroot}${prefix}/man/man1
