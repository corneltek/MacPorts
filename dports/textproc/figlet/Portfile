PortSystem 1.0
name			figlet
version			2.2
categories		textproc amusements
maintainers		jkh@opendarwin.org
description		banner-like program prints strings as ASCII art
platforms		darwin freebsd
master_sites		ftp://wuarchive.wustl.edu/graphics/graphics/misc/figlet/program/unix/ \
			ftp://ftp.funet.fi/pub/unix/tools/figlet/program/unix/ \
			ftp://ftp.internexus.net/pub/figlet/program/unix/
distname		${portname}22
checksums		md5 59fc72d8ed84902526ca1ea69f27ddec
patchfiles		patch-Makefile patch-figlet.6
configure		{}

build.env		PREFIX=$prefix

destroot.vars	PREFIX=${destroot}${prefix}
pre-destroot                 { system "install -d ${destroot}${prefix}/bin"
                              system "install -d ${destroot}${prefix}/man/man6" }
