# $Id: Portfile,v 1.4 2003/06/20 19:43:37 fkr Exp $

PortSystem 1.0
name		dos2unix
version		3.0
categories	textproc
maintainers	eric@opendarwin.org
description	Convert text between dos, unix, and mac formats
master_sites	http://fresh.t-systems-sfr.com/linux/src/
checksums	md5 4dde5302113696904d3fcfd4f41eedf1
configure	{}

build		{ cd ${worksrcpath}
		  system "gcc -O dos2unix.c -o dos2unix" }

install		{ cd ${worksrcpath}
		  system "install -o root -m 755 -d ${destroot}${prefix}/bin"
		  system "install -o root -m 755 -d ${destroot}${prefix}/man/man1"
		  system "install -o root -m 755 -cs dos2unix ${destroot}${prefix}/bin"
		  system "gzip -c dos2unix.1 > ${destroot}${prefix}/man/man1/dos2unix.1.gz"
		  system "ln -sf dos2unix.1.gz ${destroot}${prefix}/man/man1/mac2unix.1.gz"
		  system "ln -sf dos2unix ${destroot}${prefix}/bin/mac2unix" }
