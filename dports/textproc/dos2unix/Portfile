PortSystem 1.0
name		dos2unix
version		3.0
categories	textproc
maintainers	eric@opendarwin.org
description	Convert text between dos, unix, and mac formats
master_sites	http://www.go.dlr.de/fresh/linux/src/
checksums	md5 4dde5302113696904d3fcfd4f41eedf1
configure	{}

build		{ cd ${worksrcpath}
		  system "gcc -O dos2unix.c -o dos2unix" }

install		{ cd ${worksrcpath}
		  system "install -o root -m 755 -d ${prefix}/bin"
		  system "install -o root -m 755 -d ${prefix}/man/man1"
		  system "install -o root -m 755 -cs dos2unix ${prefix}/bin"
		  system "gzip -c dos2unix.1 > ${prefix}/man/man1/dos2unix.1.gz"
		  system "ln -sf dos2unix.1.gz ${prefix}/man/man1/mac2unix.1.gz"
		  system "ln -sf dos2unix ${prefix}/bin/mac2unix" }

contents	bin/dos2unix \
		bin/mac2unix \
		man/man1/dos2unix.1.gz \
		man/man1/mac2unix.1.gz
