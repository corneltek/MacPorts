PortSystem 1.0
name		aspell-dict-ru
version		0.50
categories	textproc
maintainers	mij@opendarwin.org
description	Russian dictionary for aspell
platforms	darwin

master_sites	ftp://ftp.gnu.org/gnu/aspell/

distname	aspell-ru-${portversion}-2
checksums	md5 d7add85adeef2ea36457ea811d52c295

use_bzip2	yes

depends_build	bin:aspell:aspell

configure	{ system "cd ${worksrcpath} && ./configure \
		    --vars ASPELL=${prefix}/bin/aspell \
		    WORD_LIST_COMPRESS=${prefix}/bin/word-list-compress" }

contents	share/aspell/ru.dat \
		share/aspell/ru.multi \
		share/aspell/ru.rws \
		share/aspell/ru_phonet.dat \
		share/aspell/russian.alias
