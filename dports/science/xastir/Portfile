# $Id: Portfile,v 1.1 2004/02/09 17:11:20 ssen Exp $

PortSystem 1.0
name		xastir
version		1.2.1
categories	science
maintainers	shadow@dementia.org
description	Amateur Radio APRS tracking software
platforms	darwin
homepage	http://www.xastir.org/

depends_lib     lib:libX11.6:XFree86 lib:libXm.3:openMotif \
		lib:libgdal.1:gdal lib:libgeotiff.1:libgeotiff \
		lib:libtiff.3:tiff lib:libproj.0:proj

fetch.type       cvs
cvs.root         :pserver:anonymous@cvs.sourceforge.net:/cvsroot/xastir
cvs.module       xastir
cvs.password	""
cvs.tag		HEAD

worksrcdir	${cvs.module}

pre-configure    { cd ${worksrcpath}
                   system "sh ./bootstrap.sh" }

configure.args	CFLAGS="-I${prefix}/include" LDFLAGS="-L${prefix}/lib" \
		CPPFLAGS="-I${prefix}/include"

build.target     all


