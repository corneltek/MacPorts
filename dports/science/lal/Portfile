# $Id$

PortSystem    1.0

name          lal
version       6.7.1
categories    science
platforms     darwin
maintainers   ram
license       GPL

description   LSC Algorithm Library
long_description \
  LIGO Scientific Collaboration Algorithm Library containing core \
  routines for gravitational wave data analysis.

homepage      https://www.lsc-group.phys.uwm.edu/daswg/projects/lalsuite.html
master_sites  http://www.lsc-group.phys.uwm.edu/daswg/download/software/source/lalsuite

checksums     rmd160 8d483cc4e19c6748ee9e489043a2aed2dd4a7eca \
              sha256 b358367c190cdbcc6f11bbd97201f6e38af04d1116ee4145977aeeb8568d61ef

depends_build port:pkgconfig \
              port:python27

depends_lib   port:gsl \
              port:fftw-3 \
              port:fftw-3-single

configure.python ${prefix}/bin/python2.7
configure.args --mandir=${prefix}/share/man \
               --disable-silent-rules \
               --disable-gcc-flags \
               --disable-debug

use_parallel_build yes

livecheck.type   regex
livecheck.url    ${master_sites}
livecheck.regex  {lal-(\d+(?:\.\d+)*).tar.gz}
