# $Id$

PortSystem          1.0

name                libtcd
version             2.2.7
categories          science
platforms           darwin
maintainers         dstrubbe openmaintainer
license             public-domain

description         API for using Tide Constituent Database files

long_description    libtcd provides a software API for reading and writing \
                    Tide Constituent Database (TCD) files.

homepage            http://www.flaterco.com/xtide/
master_sites        ftp://ftp.flaterco.com/xtide/
use_bzip2           yes

checksums           rmd160  b4f4de3c11c9f9c5e5fdc2bf0b5193655634629b \
                    sha256  063362d9d3574b3d9943d9b875bf91283514fdab7aba2ae3addb811ff77ef8a9

worksrcdir          ${name}-[lindex [split ${version} -] 0]

post-destroot {
    set docdir ${prefix}/share/doc/${subport}
    xinstall -d ${destroot}${docdir}
    xinstall -m 644 -W ${worksrcpath} \
        COPYING \
        ${name}.html \
        ${destroot}${docdir}
}

livecheck.type      regex
livecheck.url       ${homepage}files.html
livecheck.regex     ${name}-(\[0-9.r-\]+)${extract.suffix}
