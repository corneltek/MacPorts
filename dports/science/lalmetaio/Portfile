# $Id$

PortSystem    1.0

name          lalmetaio
version       1.0.3
categories    science
platforms     darwin
maintainers   ram
license       GPL

description   LSC Algorithm Library - MetaIO
long_description \
  LIGO Scientific Collaboration Algorithm Library - MetaIO containing \
  routines for reading/writing LIGO_LW XML files.

homepage      https://www.lsc-group.phys.uwm.edu/daswg/projects/lalsuite.html
master_sites  http://www.lsc-group.phys.uwm.edu/daswg/download/software/source/lalsuite

checksums     md5 662c2e8bf89de8371c2a10cc43dc87d2 \
              sha1 d1669e13b4e292554548b6c312ff383fb4a190f1 \
              rmd160 ec51dcb17e7b4ad2e8a44249c25a9bd4506adfb6

depends_build port:pkgconfig \
              port:python27

depends_lib   port:lal \
              port:metaio

configure.python ${prefix}/bin/python2.7
configure.args --mandir=${prefix}/share/man \
               --disable-gcc-flags

build.args    V=1

use_parallel_build yes

livecheck.type   regex
livecheck.url    ${master_sites}
livecheck.regex  {lalmetaio-(\d+(?:\.\d+)*).tar.gz}
