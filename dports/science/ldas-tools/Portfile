# $Id$

PortSystem    1.0
PortGroup     compiler_blacklist_versions 1.0

name          ldas-tools
version       2.0.2
categories    science
platforms     darwin
maintainers   ram

description   Suite of LDAS tools
long_description ${description}

homepage      http://www.ldas-sw.ligo.caltech.edu
master_sites  http://www.lsc-group.phys.uwm.edu/daswg/download/software/source/

checksums     rmd160 688281495579238f26297ca33bb61191f2b7a67e \
              sha256 eac835f44d37c1164163fedcab1ba9bc053f92cfa8e493a53186276e04ac7f8d

configure.args --disable-silent-rules \
               --with-optimization=high \
               --disable-tcl \
               --disable-python \
               --without-doxygen \
               --without-dot \
               --disable-perl \
               --disable-latex \
               --disable-ldas-documentation

depends_lib    port:openssl \
               port:zlib \
               port:bzip2 \
               port:flex

# requires clang from Xcode5 or higher to build
compiler.blacklist-append {clang < 500.2.75} llvm-gcc-4.2

use_parallel_build yes

