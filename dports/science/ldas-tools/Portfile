# $Id$

PortSystem    1.0
PortGroup     compiler_blacklist_versions 1.0

name          ldas-tools
version       2.0.4
categories    science
platforms     darwin
maintainers   ram

description   Suite of LDAS tools
long_description ${description}

homepage      http://www.ldas-sw.ligo.caltech.edu
master_sites  http://software.ligo.org/lscsoft/source/

checksums     rmd160 2782c2c6de884a1386277cacdd5fa6136231d61c \
              sha256 c8001263df073fb4d9d7c861a346a774b840c4216a0332869201e9fc99327cc3

configure.args --disable-silent-rules \
               --with-optimization=high \
               --disable-tcl \
               --disable-python \
               --without-doxygen \
               --without-dot \
               --disable-perl \
               --disable-latex \
               --disable-ldas-documentation

depends_lib    port:openssl \
               port:zlib \
               port:bzip2 \
               port:flex

# requires clang from Xcode5 or higher to build
compiler.blacklist-append {clang < 500.2.75} llvm-gcc-4.2 gcc-4.2

use_parallel_build yes

