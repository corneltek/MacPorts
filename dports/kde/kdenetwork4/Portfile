                        -DQCA2_INCLUDE_DIR=${prefix}/include/QtCrypto \
                        -DWITH_Alsa=OFF \
                        -DWITH_KDE4Workspace=OFF \
                        -DWITH_Libgadu=OFF \
                        -DWITH_msiLBC=OFF \
                        -DWITH_LiboRTP=OFF \
                        -DWITH_LibMeanwhile=OFF \
                        -DWITH_meanwhile=OFF \
                        -DWITH_Mediastreamer=OFF

