distname            kdepim-runtime-${version}

checksums           rmd160  acfd49de894034d4d1b33ef7449e488adf907d51 \
                    sha256  95bb87f3c911d012aa4831bb8d6b8dbe56cadf2529f9753d74fa6db3164e438e

