# $Id: Portfile,v 1.2 2004/01/07 00:13:40 yeled Exp $

PortSystem      1.0
name            bash-completion
version         20040101
categories      sysutils
maintainers     yeled@opendarwin.org
description	Programmable bash2 completions.
long_description	\
	Brings programmable completion to bash like those pesky \
        zsh users have had for years.
homepage	http://www.caliban.org/bash/index.shtml
platforms	darwin
master_sites    http://www.caliban.org/files/bash/
checksums       md5 9694e44dc750e1cece97c81831b921ec
use_configure   no
build           {}
destroot {
    reinplace "s|\/etc\/bash_completion|${prefix}\/etc\/bash_completion|g" \
        ${workpath}/bash_completion/bash_completion
	system "install -m 755 -c ${workpath}/bash_completion/bash_completion ${destroot}${prefix}/etc/"
}

ui_msg  "================================================================================\n"
ui_msg  "Set this in your .bash_profile:\n"
ui_msg  "\tif \[ -f ${prefix}/etc/bash_completion ]; then\n\t\t. ${prefix}/etc/bash_completion\n\tfi\n"
ui_msg  "================================================================================\n"
