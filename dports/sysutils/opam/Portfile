                    sha256  f25e1a2971c25ea61f5078e843a12147a683e5b11b52d80690fb78861c64aa47

depends_build       port:ocaml

destroot.destdir    prefix=${destroot}${prefix} mandir=${destroot}${prefix}/share/man

