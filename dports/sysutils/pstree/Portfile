# $Id: Portfile,v 1.4 2003/09/20 01:32:23 mww Exp $

PortSystem 1.0
name		pstree
version		2.20
categories	sysutils
maintainers	mww@opendarwin.org
description	process tree-view
long_description	This is pstree v2.20. It is a small program that \
			shows the ps listing as a tree.

homepage	n/a
master_sites	ftp://ftp.thp.uni-duisburg.de/pub/source/ \
		http://fresh.t-systems-sfr.com/unix/src/misc/
checksums	md5 df3deb4ac88841d3edb466272c7c1343

configure	{}

build.dir	${workpath}
build.cmd	cc
build.args	pstree.c -o pstree
build.target

destroot.cmd	cp
destroot.args	pstree
destroot.target
destroot.destdir ${destroot}${prefix}/bin

