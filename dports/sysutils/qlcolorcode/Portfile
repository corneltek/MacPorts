PortSystem          1.0
PortGroup           github 1.0
PortGroup           xcode 1.0

github.setup        anthonygelibert QLColorCode 79242c01a4
version             2.0.4
revision            5
categories          sysutils

platforms           darwin
license             GPL-2
maintainers         sean openmaintainer

description         Quick Look plugin that renders source code with syntax highlighting
long_description    ${description}

checksums           rmd160  ce801633f0725d02f8e0580ec625b5440e4aaf88 \
                    sha256  017e60dc8fef89385f46d6a0838f46e877fb812a5ddd2f83f0efd9b577a58f8b

depends_lib         port:highlight
destroot.violate_mtree  yes

post-extract {
    reinplace -W ${worksrcpath} "s,open \$PROJECT_DIR/release,," QLColorCode.xcodeproj/project.pbxproj
}

destroot {
    xinstall -d ${destroot}/Library/QuickLook
    file copy ${worksrcpath}/build/Release/${name}.qlgenerator ${destroot}/Library/QuickLook
}

# force quicklook to reload plugins
post-activate {
    system "qlmanage -r"
}

post-deactivate {
    system "qlmanage -r"
}
