# $Id$

PortSystem          1.0
PortGroup           github 1.0
PortGroup           xcode 1.0

github.setup        anthonygelibert QLColorCode d4107caa4d
version             2.0.4
revision            6
categories          sysutils

platforms           darwin
license             GPL-2
maintainers         sean openmaintainer

description         Quick Look plugin that renders source code with syntax highlighting
long_description    ${description}

checksums           rmd160  c4f82a5f6419acb6ad2744ec31c75af1875591a7 \
                    sha256  47ca6633afcc7ca882b466ecfe145a2a80f68a0f26c19ee10360043418fd76da

depends_lib         port:highlight
destroot.violate_mtree  yes

post-extract {
    reinplace -W ${worksrcpath} "s,open \$PROJECT_DIR/release,," QLColorCode.xcodeproj/project.pbxproj
}

destroot {
    xinstall -d ${destroot}/Library/QuickLook
    file copy ${worksrcpath}/build/Release/${name}.qlgenerator ${destroot}/Library/QuickLook
}

# force quicklook to reload plugins
post-activate {
    system "qlmanage -r"
}

post-deactivate {
    system "qlmanage -r"
}
