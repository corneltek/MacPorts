# $Id$

PortSystem          1.0
PortGroup           github 1.0
PortGroup           xcode 1.0

github.setup        anthonygelibert QLColorCode 5f7a809022
version             2.0.4
revision            3
categories          sysutils

platforms           darwin
license             GPL-2
maintainers         sean openmaintainer

description         Quick Look plugin that renders source code with syntax highlighting
long_description    ${description}

checksums           rmd160  181d74fe4f96349e0bc5e91b14d983b536a89998 \
                    sha256  92494bcda3759a16f7df982e16419acb8adc1600040ae3ea63155a7fac15ee1b

depends_lib         port:highlight
destroot.violate_mtree  yes

post-extract {
    reinplace -W ${worksrcpath} "s,open \$PROJECT_DIR/release,," QLColorCode.xcodeproj/project.pbxproj
}

destroot {
    xinstall -d ${destroot}/Library/QuickLook
    file copy ${worksrcpath}/build/Release/${name}.qlgenerator ${destroot}/Library/QuickLook
}

# force quicklook to reload plugins
post-activate {
    system "qlmanage -r"
}

post-deactivate {
    system "qlmanage -r"
}
