# $Id$

PortSystem          1.0
PortGroup           github 1.0
PortGroup           xcode 1.0

github.setup        anthonygelibert QLColorCode 12e86e5a2e
version             2.0.4
revision            2
categories          sysutils

platforms           darwin
license             GPL-2
maintainers         sean openmaintainer

description         Quick Look plugin that renders source code with syntax highlighting
long_description    ${description}

checksums           rmd160  4cd35bf7f234052bd32dbeacedafaeacfd09df4c \
                    sha256  898759f22d8b5ed2430106aceaee28bc71556a2fad57c5b140006eb6c10cb8f8

depends_lib         port:highlight
destroot.violate_mtree  yes

post-extract {
    reinplace -W ${worksrcpath} "s,open \$PROJECT_DIR/release,," QLColorCode.xcodeproj/project.pbxproj
}

destroot {
    xinstall -d ${destroot}/Library/QuickLook
    file copy ${worksrcpath}/build/Release/${name}.qlgenerator ${destroot}/Library/QuickLook
}

# force quicklook to reload plugins
post-activate {
    system "qlmanage -r"
}

post-deactivate {
    system "qlmanage -r"
}
