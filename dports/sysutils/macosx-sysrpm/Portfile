# $Id: Portfile,v 1.1 2003/06/01 03:25:14 ranger Exp $

PortSystem 1.0
name			macosx-sysrpm
version			10.2
platforms		darwin
revision		0
categories		sysutils
maintainers		ranger@befunk.com
description		Mac OS X system libraries placeholder RPM
long_description	This package scans your system for libraries \
			and creates an RPM package that provides all \
			of those missing dependencies.

fetch			{}
checksum		{}
extract			{}
configure		{}
build			{}
install			{
			system "mkdir -p '${destroot}${prefix}/share/macosx-sysrpm'"
			system "perl ${portpath}/${filedir}/make-links.pl '${destroot}${prefix}/share/macosx-sysrpm' -L/usr/lib -L/usr/lib/system -F/System/Library/Frameworks -F/System/Library/PrivateFrameworks"
}
