PortSystem 1.0
name		apachetop
version		0.10
categories  	sysutils www
description 	Top-like display of Apache logs	
long_description    ${description}
homepage    	http://clueful.shagged.org/apachetop/	
platforms	darwin freebsd
maintainers	fkr@opendarwin.org
master_sites    ${homepage}files/
checksums	md5 26d03b6aad6aae5bec2a05face285aec
post-patch	{ reinplace "s|/var/httpd/apache_log|/var/log/httpd/access_log|" \
			${worksrcpath}/src/apachetop.h }
configure.args	--mandir='\${prefix}/share/man'
