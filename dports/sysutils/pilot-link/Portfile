# $Id: Portfile,v 1.2 2003/03/03 07:14:58 mij Exp $

PortSystem 1.0
name		pilot-link
version		0.10.99
revision	1
categories	sysutils
maintainers	ranger@befunk.com
description	palm-pilot libraries and tools

platforms	darwin
master_sites	http://pilot-link.org/source/
patchfiles	patch-${name}-${version}.darwin
depends_lib	lib:libiconv:libiconv lib:libreadline:readline

checksums	md5 c7acfa7464be5eee763137a590a6f282

patch {
		foreach patch $patchfiles {
			system "cd '${workpath}/${distname}' && \
			sed -e 's#@PREFIX@#${prefix}#g' '${portpath}/${filedir}/${patch}' | patch -p1"
		}
}

configure.env	CPPFLAGS='-I${prefix}/include -no-cpp-precomp -fno-common' \
		LIBS='-L${prefix}/lib' DYLD_LIBRARY_PATH='${prefix}/lib' \
		JAVA_HOME=/Library/Java/Home
configure.args	--prefix='${prefix}' --with-pic --enable-shared --enable-static --without-python --libexecdir='${prefix}/lib'
build.env	${configure.env}

# why is this necessary??
post-build	{
		system "cd ${worksrcpath}/libpisock++ && make clean all"
}
