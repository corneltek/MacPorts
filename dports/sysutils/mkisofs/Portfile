# $Id: Portfile,v 1.1 2003/07/09 15:59:24 matt Exp $

PortSystem 1.0
name                    mkisofs
version                 1.11.3
platforms               darwin
categories              sysutils
homepage		http://www.andante.org/mkisofs.html
maintainers             matt@opendarwin.org

description             A tool for premastering iso9660 filesystems
long_description        The mkisofs tool is used for premastering iso9660 filesystems \
			which are used on CDROMs. The output of mkisofs can then be sent \
			to a CDROM writer with a utility such as cdrecord.

master_sites		ftp://ftp.andante.org/pub/people/eric-youngdale/mkisofs/
checksums		md5 6ac09ac298401a900fb37534888c16fb

distname                ${name}-${version}
worksrcdir              ${name}-${version}

build.target		{}
install.args		prefix=${destroot}${prefix}


variant beta {
	version		1.12b5
	master_sites	ftp://ftp.andante.org/pub/people/eric-youngdale/mkisofs/
	checksums	md5 176b5f7f2499d8f2b32e55befdd13f69
}

