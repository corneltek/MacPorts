build.env-append    CC="${configure.cc} [get_canonical_archflags cc]" \
                    CFLAGS="${configure.cflags}" \
                    PREFIX="${prefix}"
    
destroot.env-append CC="${configure.cc} [get_canonical_archflags cc]" \
                    CFLAGS="${configure.cflags}" \
                    PREFIX="${prefix}"
