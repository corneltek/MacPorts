PortSystem 1.0
name		pango
version		1.0.5
categories	x11
maintainers	mij@opendarwin.org
description	Framework for the layout and rendering of i18n text
platforms	darwin
master_sites	ftp://ftp.gnome.org/pub/sources/pango/1.0/

checksums	md5 e300e5c163bc28e180e45c8e20543b4b

use_bzip2	yes

patchfiles	patch-Makefile.in patch-configure patch-ltmain.sh \
		patch-pango-Makefile.in patch-pango-pangoxft-font.c \
		patch-update-pango-modules

depends_build	bin:freetype-config:freetype
depends_lib	lib:libglib.2:glib2 lib:libintl.1:gettext

configure.env	LDFLAGS="-L${prefix}/lib" CPPFLAGS="-I${prefix}/include \
		-no-cpp-precomp" 

post-install	{ system "ln -fs libpango-1.0.0.0.5.dylib \
		    ${prefix}/lib/libpango.1.dylib"
		  system "ln -fs libpangox-1.0.0.0.5.dylib \
		    ${prefix}/lib/libpangox.1.dylib"
		  reinplace "s|\./|${prefix}/etc/pango/|g" \
		    ${worksrcpath}/examples/pangorc
		  reinplace "s|\./|${prefix}/etc/pango/|g" \
		    ${worksrcpath}/examples/pangox.aliases
		  system "cp ${worksrcpath}/examples/pangorc \
		    ${prefix}/etc/pango"
		  system "cp ${worksrcpath}/examples/pangox.aliases \
		    ${prefix}/etc/pango" }

include		contents
