# $Id: Portfile,v 1.2 2003/05/26 03:07:08 ranger Exp $

PortSystem 1.0
name		koffice
version		1.2.90
revision	1
categories	x11
maintainers	ranger@befunk.com
description	the KDE office suite

platforms	darwin
master_sites	ftp://ftp.kde.org/pub/kde/unstable/${name}-${version}/src/ http://ranger.befunk.com/fink/:admin http://ranger.befunk.com/darwin/:darwin
extract.sufx	.tar.bz2
use_bzip2	yes
distname	koffice-${version}
distfiles	${distname}.tar.bz2 koffice-admindir-20030508.tar.bz2:admin detect-autoconf.tar.bz2:darwin
patchfiles	patch-${name}.darwin
depends_lib	lib:libDCOP:kdelibs3 lib:libart_lgpl_2:libart_lgpl lib:libdl.1:dlcompat \
		lib:libjpeg:jpeg lib:libkdecore.4:kdelibs3 bin:startkde:kdebase3 \
		lib:libpng.3:libpng lib:libqt-mt.3.1:qt3 lib:libX11.6:XFree86 \
		bin:python:python lib:libxml2.2:libxml2 lib:libxslt:libxslt

checksums	${name}-${version}.tar.bz2 md5 5f08ec8a42aacd7dcaf7899d486c9885 \
		koffice-admindir-20030508.tar.bz2 md5 4db48666f9a0b260c21d94b2487e92fd \
		detect-autoconf.tar.bz2 md5 1f511627496be40174169dbab4d6d78a

set env(PATH) "$env(PATH):${prefix}/bin:/usr/X11R6/bin"

patch {
		foreach patch $patchfiles {
			system "cd '${workpath}/${distname}' && \
			sed -e 's#@PREFIX@#${prefix}#g' '${portpath}/${filedir}/${patch}' | patch -p0"
		}
}
post-patch      {
		system "cd '${worksrcpath}' && cp -Rf ../admin/ admin"
		system "cd '${worksrcpath}' && make -f admin/Makefile.common cvs"
}
configure.env	CPPFLAGS='-I${prefix}/include -I${prefix}/include/qt3 -no-cpp-precomp -fno-common' \
		LIBS='-L${prefix}/lib' DYLD_LIBRARY_PATH='${prefix}/lib'
configure.args	--prefix='${prefix}' --includedir='${prefix}/include' --libdir='${prefix}/lib' \
		--with-extra-includes='${prefix}/include' --with-extra-libs='${prefix}/lib' \
		--with-qt-dir='${prefix}' --with-qt-includes='${prefix}/include/qt3' \
		--enable-rpath --with-pic --enable-shared=yes --enable-static=no --enable-mt \
		--libexecdir='${prefix}/lib' --with-xinerama --with-pam --enable-final \
		--disable-dependency-tracking
build.env	${configure.env}
