# $Id: Portfile,v 1.1 2003/11/24 22:40:07 rshaw Exp $
PortSystem 1.0

name		xping
version		1.9
categories	x11
maintainers	jdputsch@comcast.net
description	'ping' an Xserver
long_description	A simple tool to determine if an X11 server is running.
prefix		${x11prefix}
distfiles	xping.c
depends_lib	lib:libX11.6:XFree86

fetch 		{}
extract		{ file mkdir ${worksrcpath}
		  file copy ${filespath}/${distfiles} ${worksrcpath} }
use_configure	no

build		{ cd ${worksrcpath}
		  system "cc ${distfiles} -Wall -I${x11prefix}/include -L${x11prefix}/lib -lX11 -o xping" }

destroot	{ system "install -m 755 ${worksrcpath}/xping ${destroot}/${prefix}/bin/" }

