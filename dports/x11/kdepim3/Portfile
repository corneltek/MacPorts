# $Id: Portfile,v 1.7 2003/06/01 20:32:40 ranger Exp $

PortSystem 1.0
name		kdepim3
version		3.1.2
revision	1
categories	x11
maintainers	ranger@befunk.com
description	pim applications

platforms	darwin
master_sites	ftp://ftp.kde.org/pub/kde/stable/${version}/src/ http://ranger.befunk.com/fink/:admin http://ranger.befunk.com/darwin/:darwin
extract.sufx	.tar.bz2
use_bzip2	yes
distname	kdepim-${version}
distfiles	${distname}.tar.bz2 \
		kde-admindir-20030601.tar.bz2:admin \
		detect-autoconf.tar.bz2:darwin \
		kdepim-lexfiles-${version}.tar.bz2:darwin
patchfiles	patch-${name}.darwin
depends_lib	lib:libDCOP:kdelibs3 lib:libart_lgpl_2:libart_lgpl lib:libdl.1:dlcompat \
		lib:libjpeg:jpeg lib:libkdecore.4:kdelibs3 bin:startkde:kdebase3 \
		lib:libpisock:pilot-link lib:libpng.3:libpng lib:libpoll:poll-emulator \
		lib:libqt-mt.3.1:qt3 lib:libX11.6:XFree86

checksums	kdepim-${version}.tar.bz2 md5 37253cbba0fcf1201f6b24d3e8efa943 \
		kde-admindir-20030601.tar.bz2 md5 6135f81de4b1561942be8fd31ae21297 \
		detect-autoconf.tar.bz2 md5 1f511627496be40174169dbab4d6d78a \
		kdepim-lexfiles-${version}.tar.bz2 md5 06e8e6833f81d5c3d732805e2cbf9f84

set env(PATH) "/usr/X11R6/bin:$env(PATH):${prefix}/bin"

patch {
		foreach patch $patchfiles {
			system "cd '${workpath}/${distname}' && \
			sed -e 's#@PREFIX@#${prefix}#g' '${portpath}/${filedir}/${patch}' | patch -p0"
		}

		# flex 2.5.4 (which comes with macosx) is broken
		# this removes the bit that messes up icalsslexer.c
		# we replace it below with a working .c file instead
		system "perl -pi -e 's,^.*/icalsslexer.c: icalssyacc.h,,' '${worksrcpath}/libical/src/libicalss/Makefile.am'"
		system "perl -pi -e 's,^.*/icallexer.c : icalyacc.h,,' '${worksrcpath}/libical/src/libical/Makefile.am'"
}
post-patch {
		system "cd '${worksrcpath}' && cp -Rf ../admin/ admin"
		system "cd '${worksrcpath}' && make -f admin/Makefile.common cvs"
}
configure.env	CPPFLAGS='-I/usr/X11R6/include -I${prefix}/include -I${prefix}/include/qt3 -no-cpp-precomp -fno-common' \
		LDFLAGS='-L/usr/X11R6/lib' LIBS='-L${prefix}/lib' DYLD_LIBRARY_PATH='/usr/X11R6/lib:${prefix}/lib'
configure.args	--prefix='${prefix}' --includedir='${prefix}/include' --libdir='${prefix}/lib' \
		--with-extra-includes='${prefix}/include' --with-extra-libs='${prefix}/lib' \
		--with-qt-dir='${prefix}' --with-qt-includes='${prefix}/include/qt3' \
		--enable-rpath --with-pic --enable-shared=yes --enable-static=no --enable-mt \
		--libexecdir='${prefix}/lib' --with-xinerama --with-pam --enable-final \
		--disable-dependency-tracking
post-configure {
		system "touch '${worksrcpath}/libical/src/libical/icallexer.c'"
		system "touch '${worksrcpath}/libical/src/libicalss/icalsslexer.c'"
}
build.env	${configure.env}
