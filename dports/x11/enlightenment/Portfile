		lib:libpng.3:libpng lib:libtiff.3:tiff \
		lib:libXpm.4:xpm lib:libImlib:imlib \
		lib:libesd:esound lib:libFnlib:fnlib \
		lib:libttf:freetype1
configure.env	CPPFLAGS=-I${prefix}/include/freetype1
configure.args	--enable-fsstd=yes 

