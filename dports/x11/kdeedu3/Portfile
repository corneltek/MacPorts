# $Id: Portfile,v 1.13 2004/01/18 06:28:09 toby Exp $

PortSystem 1.0
name		kdeedu3
version		3.1.2
revision	1
categories	x11
maintainers	ranger@befunk.com
description	educational games and software

platforms	darwin
master_sites	kde:stable/${version}/src http://ranger.befunk.com/fink/:admin http://ranger.befunk.com/darwin/:darwin
extract.suffix	.tar.bz2
use_bzip2	yes
distname	kdeedu-${version}
distfiles	${distname}.tar.bz2 kde-admindir-20030601.tar.bz2:admin detect-autoconf.tar.bz2:darwin
depends_lib	lib:libDCOP:kdelibs3 lib:libart_lgpl_2:libart_lgpl \
		lib:libjpeg:jpeg lib:libkdecore.4:kdelibs3 bin:startkde:kdebase3 \
		lib:libpng.3:libpng lib:libqt-mt.3.1:qt3 lib:libX11.6:XFree86

checksums	kdeedu-${version}.tar.bz2 md5 ba2a96454b7d2a7d92c991b08d932242 \
		kde-admindir-20030601.tar.bz2 md5 6135f81de4b1561942be8fd31ae21297 \
		detect-autoconf.tar.bz2 md5 1f511627496be40174169dbab4d6d78a

set env(PATH) "/usr/X11R6/bin:$env(PATH):${prefix}/bin"

variant darwin {
		depends_lib-append lib:libdl:dlcompat
		patchfiles \
			stable/patch-kdeedu-applnk-Makefile.am.diff \
			stable/patch-kdeedu-applnk-miscellaneous.desktop.diff \
			stable/patch-kdeedu-applnk-miscellanous.desktop.diff \
			stable/patch-kdeedu-flashkard-flashkard-main.cpp.diff \
			stable/patch-kdeedu-flashkard-flashkard-Makefile.am.diff \
			stable/patch-kdeedu-flashkard-flashkard.kdevprj.diff \
			stable/patch-kdeedu-kalzium-calculations-Makefile.am.diff \
			stable/patch-kdeedu-khangman-khangman-khangman.cpp.diff \
			stable/patch-kdeedu-kiten-Makefile.am.diff \
			stable/patch-kdeedu-klettres-klettres-pics-Makefile.am.diff \
			stable/patch-kdeedu-kmathtool-configure.in.in.diff \
			stable/patch-kdeedu-kmplot-kmplot-diagr.cpp.diff \
			stable/patch-kdeedu-kstars-kstars-data-Makefile.am.diff \
			stable/patch-kdeedu-kstars-kstars-modcalcdaylength.cpp.diff \
			stable/patch-kdeedu-ktouch-Makefile.am.diff \
			stable/patch-kdeedu-kvoctrain-kvoctrain-Makefile.am.diff
}

variant cvs {
		version 3.2
		revision 0

		##### THIS IS UNSUPPORTED, DO NOT USE THIS IN YOUR PORTS! #####
		cvs.root :pserver:anonymous@anoncvs.kde.org:/home/kde
		cvs.module kdeedu
		pre-extract cvsfetch
		##### I MEAN IT, LANDONF WILL KILL YOU IF YOU DO THIS! #####

		distname kdeedu
		distfiles kde-admindir-cvs-20030701.tar.bz2:admin
		checksums kde-admindir-cvs-20030701.tar.bz2 md5 b9bf2dc286d2e434c2cfdadc421c79b6

		patchfiles current/patch-kdeedu.diff
		post-extract {
			system "rm -rf '${workpath}/${distname}/khangman'"
		}
}

patch {
		foreach patch $patchfiles {
			system "cd '${workpath}/${distname}' && \
			sed -e 's#@PREFIX@#${prefix}#g' '${portpath}/${filesdir}/${patch}' | patch -p0"
		}
}
post-patch      {
		system "cd '${worksrcpath}' && cp -Rf ../admin/ admin"
		system "cd '${worksrcpath}' && make -f admin/Makefile.common cvs"
}
configure.env	CPPFLAGS='-I/usr/X11R6/include -I${prefix}/include -I${prefix}/include/qt3 -no-cpp-precomp -fno-common' \
		LDFLAGS='-L/usr/X11R6/lib' LIBS='-L${prefix}/lib' DYLD_LIBRARY_PATH='${prefix}/lib'
configure.args	--prefix='${prefix}' --includedir='${prefix}/include' --libdir='${prefix}/lib' \
		--with-extra-includes='${prefix}/include' --with-extra-libs='${prefix}/lib' \
		--with-qt-dir='${prefix}' --with-qt-includes='${prefix}/include/qt3' \
		--enable-rpath --with-pic --enable-shared=yes --enable-static=no --enable-mt \
		--libexecdir='${prefix}/lib' --with-xinerama --with-pam --disable-final \
		--disable-dependency-tracking
build.env	${configure.env}
