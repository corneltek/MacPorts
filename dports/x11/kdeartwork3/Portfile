# $Id: Portfile,v 1.8 2003/06/18 00:16:21 ranger Exp $

PortSystem 1.0
name		kdeartwork3
version		3.1.2
revision	2
categories	x11
maintainers	ranger@befunk.com
description	extra icons and screensavers for KDE

platforms	darwin
master_sites	ftp://ftp.kde.org/pub/kde/stable/${version}/src/ http://ranger.befunk.com/fink/:admin http://ranger.befunk.com/darwin/:darwin
extract.sufx	.tar.bz2
use_bzip2	yes
distname	kdeartwork-${version}
distfiles	${distname}.tar.bz2 kde-admindir-20030601.tar.bz2:admin detect-autoconf.tar.bz2:darwin
depends_lib	lib:libDCOP:kdelibs3 lib:libart_lgpl_2:libart_lgpl \
		lib:libkdecore.4:kdelibs3 bin:startkde:kdebase3 lib:libpng.3:libpng \
		lib:libqt-mt.3.1:qt3 lib:libX11.6:XFree86

checksums	kdeartwork-${version}.tar.bz2 md5 0ac7fda2acfa32ce26913ff864722e44 \
		kde-admindir-20030601.tar.bz2 md5 6135f81de4b1561942be8fd31ae21297 \
		detect-autoconf.tar.bz2 md5 1f511627496be40174169dbab4d6d78a

set env(PATH) "/usr/X11R6/bin:$env(PATH):${prefix}/bin"

variant darwin {
		depends_lib-append lib:libdl.1:dlcompat
		patchfiles \
			current/patch-kdeartwork-kwin-styles-cde-Makefile.am.diff \
			current/patch-kdeartwork-kwin-styles-glow-Makefile.am.diff \
			current/patch-kdeartwork-kwin-styles-openlook-Makefile.am.diff
}

variant cvs {
		version 3.2.0
		revision 0

		##### THIS IS UNSUPPORTED, DO NOT USE THIS IN YOUR PORTS! #####
		cvs.root :pserver:anonymous@anoncvs.kde.org:/home/kde
		cvs.module kdeartwork
		pre-extract cvsfetch
		##### I MEAN IT, LANDONF WILL KILL YOU IF YOU DO THIS! #####

		distname kdeartwork
		distfiles kde-admindir-cvs-20030616.tar.bz2:admin detect-autoconf.tar.bz2:darwin
		checksums kde-admindir-cvs-20030616.tar.bz2 md5 caf9880587ddc3fab8f5b9ba97eae470 \
			detect-autoconf.tar.bz2 md5 1f511627496be40174169dbab4d6d78a

		patchfiles \
			current/patch-kdeartwork-kwin-styles-cde-Makefile.am.diff \
			current/patch-kdeartwork-kwin-styles-glow-Makefile.am.diff \
			current/patch-kdeartwork-kwin-styles-icewm-Makefile.am.diff \
			current/patch-kdeartwork-kwin-styles-kde1-Makefile.am.diff \
			current/patch-kdeartwork-kwin-styles-kstep-Makefile.am.diff \
			current/patch-kdeartwork-kwin-styles-openlook-Makefile.am.diff \
			current/patch-kdeartwork-kwin-styles-riscos-Makefile.am.diff \
			current/patch-kdeartwork-kwin-styles-system-Makefile.am.diff
}

patch {
		foreach patch $patchfiles {
			system "cd '${workpath}/${distname}' && \
			sed -e 's#@PREFIX@#${prefix}#g' '${portpath}/${filedir}/${patch}' | patch -p0"
		}
}
post-patch      {
		system "cd '${worksrcpath}' && cp -Rf ../admin/ admin"
		system "cd '${worksrcpath}' && make -f admin/Makefile.common cvs"
}

configure.env	CPPFLAGS='-I/usr/X11R6/include -I${prefix}/include -I${prefix}/include/qt3 -no-cpp-precomp -fno-common' \
		LDFLAGS='-L/usr/X11R6/lib' LIBS='-L${prefix}/lib' DYLD_LIBRARY_PATH='/usr/X11R6/lib:${prefix}/lib'
configure.args	--prefix='${prefix}' --includedir='${prefix}/include' --libdir='${prefix}/lib' \
		--with-extra-includes='${prefix}/include' --with-extra-libs='${prefix}/lib' \
		--with-qt-dir='${prefix}' --with-qt-includes='${prefix}/include/qt3' \
		--enable-rpath --with-pic --enable-shared=yes --enable-static=no --enable-mt \
		--libexecdir='${prefix}/lib' --with-xinerama --with-pam --enable-final \
		--disable-dependency-tracking
build.env	${configure.env}
