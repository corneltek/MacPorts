# $Id: Portfile,v 1.2 2004/01/30 07:15:07 toby Exp $

PortSystem 1.0
name                fox
version             1.0.48
revision            1
description         The FOX GUI toolkit
long_description    FOX is a C++ based Toolkit for developing Graphical \
                    User Interfaces easily and effectively.
maintainers         darwin@otierney.net
categories          x11
platforms           darwin 
homepage            http://www.fox-toolkit.org/
master_sites        ftp://ftp.fox-toolkit.org/pub/ \
                    http://www.fox-toolkit.org/ftp/
checksums           md5 55b37dce548d650099b59a52fb7b5d06
depends_lib         lib:libtiff.3:tiff  lib:libpng12.0:libpng \
                    lib:libjpeg.62:jpeg lib:libX11.6:XFree86
configure.env       CPPFLAGS=-I${prefix}/include CC=g++ CXX=g++ \
                    LDFLAGS=-L${prefix}/lib
configure.pre_args  --prefix=${prefix}
configure.args      --with-opengl=no --enable-cups
post-configure      {
                        reinplace "s;fox/html;share/fox/html;" ${worksrcpath}/doc/Makefile
                        reinplace "s;fox/html;share/fox/html;" ${worksrcpath}/doc/art/Makefile
                        reinplace "s;fox/html;share/fox/html;" ${worksrcpath}/doc/screenshots/Makefile
                    }

