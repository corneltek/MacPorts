# $Id: Portfile,v 1.4 2003/05/20 13:34:57 ranger Exp $

PortSystem 1.0
name		kdetoys3
version		3.1.2
revision	1
categories	x11
maintainers	ranger@befunk.com
description	miscellaneous toys and goofy apps for KDE

platforms	darwin
master_sites	ftp://ftp.kde.org/pub/kde/stable/${version}/src/ http://ranger.befunk.com/fink/:admin
extract.sufx	.tar.bz2
use_bzip2	yes
distname	kdetoys-${version}
distfiles	${distname}.tar.bz2 kde-admindir-20030506.tar.bz2:admin
depends_lib	lib:libDCOP:kdelibs3 lib:libart_lgpl_2:libart_lgpl lib:libdl.1:dlcompat \
		lib:libjpeg:jpeg lib:libkdecore.4:kdelibs3 bin:startkde:kdebase3 \
		lib:libpng.3:libpng lib:libqt-mt.3.1:qt3 lib:libX11.6:XFree86

checksums	kdetoys-${version}.tar.bz2 md5 fa311c7b142f7b4b6a61bce463e851eb \
		kde-admindir-20030506.tar.bz2 md5 7b9c78d99df465f0fb7db434205657aa

post-patch      {
		system "cd '${worksrcpath}' && cp -Rf ../admin/ admin"
		system "cp '${portpath}/${filedir}/detect-autoconf.sh' '${worksrcpath}/admin/'"
		system "cd '${worksrcpath}' && make -f admin/Makefile.common cvs"
}
configure.env	CPPFLAGS='-I${prefix}/include -I${prefix}/include/qt3 -no-cpp-precomp -fno-common' \
		LIBS='-L${prefix}/lib' DYLD_LIBRARY_PATH='${prefix}/lib'
configure.args	--prefix='${prefix}' --includedir='${prefix}/include' --libdir='${prefix}/lib' \
		--with-extra-includes='${prefix}/include' --with-extra-libs='${prefix}/lib' \
		--with-qt-dir='${prefix}' --with-qt-includes='${prefix}/include/qt3' \
		--enable-rpath --with-pic --enable-shared=yes --enable-static=no --enable-mt \
		--libexecdir='${prefix}/lib' --with-xinerama --with-pam --enable-final \
		--disable-dependency-tracking
build.env	${configure.env}
