# $Id$

PortSystem      1.0

name            gfontsampler
version         0.4
revision        1
description     Browse and compare all of your installed fonts.
long_description \
                ${description}
homepage        http://web.archive.org/web/20061010193007/http://linuxadvocate.org/projects/gfontsampler/
maintainers     nomaintainer
categories      x11
license         GPL-2+
platforms       darwin
master_sites    freebsd
checksums       md5 db2dadf22192861475686030a17c300e
depends_build   port:pkgconfig
depends_lib     port:desktop-file-utils \
                port:gtk2 \
                port:libglade2 \
                port:libgnomeui

patchfiles      patch-Makefile.in.diff \
                src_Makefile.in.patch

post-activate {
    system "${prefix}/bin/update-desktop-database ${prefix}/share/applications"
}

livecheck.type  regex
livecheck.url   http://ftp.FreeBSD.org/pub/FreeBSD/ports/distfiles/
livecheck.regex "${name}-(\\d+(?:\\.\\d+)*)${extract.suffix}"
