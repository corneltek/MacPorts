patchfiles	patch-Makefile
configure	{ 	reinplace "s|@@DESTROOT@@|${destroot}${prefix}|g" ${worksrcpath}/Makefile
			reinplace "s|@@PREFIX@@|${prefix}|g" ${worksrcpath}/Makefile }
install.destroot	prefix=${destroot}${prefix}
