autoreconf.args     -fvi

configure.args      --disable-silent-rules \
                    --enable-compile-warnings=no \
                    --disable-debug \
                    --enable-goa \
                    --enable-filesystem \
                    --enable-optical-media \
                    --enable-jamendo \
                    --enable-lastfm-albumart \
                    --enable-upnp \
                    --enable-youtube \
                    --enable-flickr \
                    --disable-pocket \
                    --enable-podcasts \
                    --enable-bookmarks \
                    --enable-shoutcast \
                    --enable-apple-trailers \
                    --enable-magnatune \
                    --enable-metadata-store \
                    --enable-vimeo \
                    --enable-gravatar \
                    --disable-tracker \
                    --enable-bliptv \
                    --enable-raitv \
                    --enable-localmetadata \
                    --disable-dmap \
                    --enable-tmdb \
                    --enable-freebox
#                    --enable-pocket \ # requires goa-1.0 >= 3.11.4
