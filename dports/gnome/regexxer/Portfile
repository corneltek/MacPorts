# $Id: Portfile,v 1.1 2004/02/02 15:13:35 olegb Exp $

PortSystem 1.0
name		regexxer
version		0.4
description	A search and replace tool for GNOME.
long_description	regexxer is a nifty search/replace tool for the \
			desktop user. It features recursive search through \
			directory trees and Perl-style regular expressions \
			(using libpcre).
maintainers	olegb@opendarwin.org
categories	gnome 
platforms	darwin 
homepage	http://regrexxer.sourceforge.net
master_sites    gnome:fifth-toe/2.4/2.4.0/sources/
checksums	md5 e761fe8dd24eaa9f1d203672a92bbfd5
depends_lib	lib:libpcre:pcre lib:libgtkmm-2:gtkmm
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" \
                CFLAGS="-no-cpp-precomp -flat_namespace -undefined suppress" 
