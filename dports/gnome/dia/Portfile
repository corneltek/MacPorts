PortSystem 1.0
name		dia
version		0.92.2
description	Session component for the GNOME 2 desktop
long_description        Session component for the GNOME 2.0 desktop. \
maintainers	olegb@opendarwin.org
categories	gnome
platforms	darwin 
homepage	http://www.lysator.liu.se/~alla/dia/
master_sites    gnome:sources/dia/0.92/
use_bzip2	yes
checksums	md5 2c14d023bd905e65368ee3df3248dc2a
depends_lib     lib:libgtk.2:gtk2 lib:libxml2.2.6.5:libxml2 
patchfiles	patch_plug-ins.c patch_Makefile.in
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" \
                CFLAGS="-no-cpp-precomp -L${prefix}/lib" 
configure.args	--mandir=${prefix}/share/man --infodir=${prefix}/share/info
variant gnome 	{ 
		configure.args-append   --enable-gnome 
		depends_lib-append      lib:gnome-session:gnome-session 
		}
