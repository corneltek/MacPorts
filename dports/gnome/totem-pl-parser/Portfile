# $Id$

PortSystem      1.0

name            totem-pl-parser
version         3.4.5
set branch      [join [lrange [split ${version} .] 0 1] .]
categories      gnome
license         LGPL-2+
maintainers     devans openmaintainer
description     Gnome Playlist parser
long_description \
        totem-pl-parser is a simple GObject-based library to parse \
        a host of playlist formats, as well as save those

homepage        http://live.gnome.org/Totem
platforms       darwin
master_sites    gnome:sources/${name}/${branch}/

use_xz          yes

checksums       rmd160  8dc0aaa0c06858b0514c6e55bc2210a7e7446c89 \
                sha256  a573e078692b48895cb5b041385b2760d63e2ee496c8d499eccfa942e7c79f89

depends_build   port:pkgconfig \
                port:intltool

depends_lib     port:libsoup \
                port:libarchive \
                port:libgcrypt \
                port:libxml2 \
                port:gmime \
                port:gobject-introspection

patchfiles      patch-plparse-plparser.symbols.diff

configure.args  --enable-introspection=yes \
                --enable-libarchive \
                --enable-libgcrypt \
                --disable-quvi \
                --disable-silent-rules

livecheck.type  gnome
