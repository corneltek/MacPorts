PortSystem 1.0
name		libgnome
version		2.2.3
description	This is the non-gui part of the library formerly \
		known as gnome-libs.
long_description       	This is the non-gui part of the library formerly \
			known as gnome-libs. 
maintainers	olegb@opendarwin.org
categories	gnome
platforms	darwin 
homepage	http://www.gnome.org/
master_sites    ftp://ftp.gnome.org/pub/GNOME/desktop/2.2/2.2.2/sources/
checksums	md5 2a8436cba9f92354c9169deb0feefb83
depends_lib	lib:libesd:esound lib:libgnomevfs-2:gnome-vfs \
		lib:libaudiofile:audiofile lib:libxslt:libxslt \
		lib:libscrollkeeper:scrollkeeper lib:docbook-xml:docbook-xml
depends_build   bin:pkg-config:pkgconfig
use_bzip2 	yes
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" 
