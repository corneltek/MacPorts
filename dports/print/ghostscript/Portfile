# $ Id: $
PortSystem 1.0
name		ghostscript
version		8.00
homepage	http://www.cs.wisc.edu/~ghost/
description	AFPL Ghostscript, An interpreter for PostScript and PDF
categories	print
platforms	darwin freebsd
maintainers	digdog@opendarwin.org
master_sites	http://unc.dl.sourceforge.net/sourceforge/ghostscript/:source \
                http://www.ijg.org/files/:jpeg \
                http://unc.dl.sourceforge.net/sourceforge/libpng/:libpng
distfiles	${distname}${extract.sufx}:source \
		ghostscript-fonts-std-6.0${extract.sufx}:source \
                ghostscript-fonts-other-6.0${extract.sufx}:source \
		jpegsrc.v6b${extract.sufx}:jpeg \
		libpng-1.2.5${extract.sufx}:libpng \
		zlib-1.1.4${extract.sufx}:libpng

checksums	${distname}${extract.sufx} md5 75b7b52fffd8b7b45f8020f4b7b03e82 \
		ghostscript-fonts-std-6.0${extract.sufx} md5 8250132d6fcc6eb1419f505f06c7690b \
		ghostscript-fonts-other-6.0${extract.sufx} md5 1a643ae62ef166562e4d422b1a601272 \
		jpegsrc.v6b${extract.sufx} md5 dbd5f3b47ed13132f04c685d608a7547 \
		libpng-1.2.5${extract.sufx} md5 0cec860559f2f5f7145da3c6851bacb7 \
		zlib-1.1.4${extract.sufx} md5 abc405d0bdd3ee22782d7aa20e440f08

post-extract	{
			cd ${workpath} 
			system "mv jpeg-6b ${distname}/jpeg"
			system "mv libpng-1.2.5 ${distname}/libpng"
			system "mv zlib-1.1.4 ${distname}/zlib" }

build.target
destroot.destdir	prefix=${destroot}/${prefix}
post-destroot	{
			system "mkdir -p ${destroot}/${prefix}/share/ghostscript/"
			system "mv ${workpath}/fonts ${destroot}/${prefix}/share/ghostscript" }
				
long_description	Ghostscript is the well-known PostScript interpreter which \
			is available for Ghostscript is the well-known PostScript \
			interpreter which is available for all common and most \
			esoteric platforms and supports many different printers \
			and some displays. \
			Versions entitled "AFPL Ghostscript" are distributed with \
			a licence different from the GPL. 
