PortSystem 1.0

name		py-numeric
version		23.1
categories	devel
maintainers	mww@opendarwin.org
description	fast numerical array language for python
long_description	Numerical Python adds a fast, compact, \
			multidimensional array language facility to Python

homepage	http://www.pfdubois.com/numpy/
master_sites	sourceforge:numpy
distfiles	Numeric-${version}${extract.sufx}
checksums	md5 5cd24ed20627f5cbc822a2bed8ff27e9

depends_lib	bin:python:python

set worksrcpath	${workpath}/Numeric-${version}

configure	{}

build.dir	${worksrcpath}
build.cmd	python setup.py
build.target	build
build.args

destroot.cmd	python setup.py
destroot.destdir	--prefix=${destroot}${prefix}
