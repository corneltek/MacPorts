PortSystem 1.0
name		gnutls
version		0.9.93
categories	devel
maintainers	mij@opendarwin.org
description	GNU Transport Layer Security Library
homepage	http://www.gnutls.org/
platforms	darwin

long_description GnuTLS is a portable ANSI C based library which \
		 implements the TLS 1.0 and SSL 3.0 protocols. The library \
		 does not include any patented algorithms and is available \
		 under the GNU Lesser GPL license.

master_sites	ftp://ftp.gnupg.org/gcrypt/alpha/${portname}/ \
		http://www.mirrors.wiretapped.net/security/network-security/${portname}/ \
		ftp://ftp.mirrors.wiretapped.net/security/network-security/${portname}/ \
		ftp://ftp.gnutls.org/pub/${portname}/

checksums	md5 32a369f69af65f04e9c6c72ac9d14eb7

depends_lib	lib:libgcrypt.7:libgcrypt lib:libtasn1.2:libtasn1

configure.env	LDFLAGS="-L${prefix}/lib" CPPFLAGS="-I${prefix}/include"
