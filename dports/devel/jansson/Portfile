# $Id$

PortSystem       1.0

name             jansson
version          2.4
categories       devel
platforms        darwin
license          MIT
maintainers      nomaintainer

description      A library for encoding, decoding and manipulating JSON data.
long_description \
    Jansson is a C library for encoding, decoding and manipulating JSON data.

homepage         http://www.digip.org/jansson/
master_sites     http://www.digip.org/jansson/releases/

checksums        rmd160 36d31aa220df478c1e6d19e343404b0cbec6360c \
                 sha256 1fcbd1ac3d8b610644acf86a5731d760bb228c9acbace20a2ad0f23baec79b41

post-destroot {
    set docdir ${destroot}${prefix}/share/doc/${subport}
    xinstall -d ${docdir}
    eval xinstall -m 644 [glob ${worksrcpath}/doc/*.rst] ${docdir}
}

livecheck.type   regex
livecheck.url    ${master_sites}
livecheck.regex  {jansson-(\d+(?:\.\d+)*).tar.gz}
