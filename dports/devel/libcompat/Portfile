PortSystem 1.0
name		libcompat
version		4.6.2-RELEASE
categories	devel
maintainers	eric@opendarwin.org
description	Compatibility library with functionality from 4BSD
platforms	darwin
use_bzip2	yes
master_sites	http://www.opendarwin.org/projects/darwinports/distfiles/
checksums	md5 4e0ddeec2be3a2c8caf24a3ed51b8501
build.type	bsd
worksrcdir	${portname}
configure	{}
patchfiles	patch-Makefile
build.env	LDADD=-install_name\\ ${prefix}/lib/libcompat.1.dylib

install		{ cd ${worksrcpath}
		  system "install -o root -m 755 -d ${prefix}/lib"
		  system "install -o root -m 755 -c libcompat.1.dylib \
		    ${prefix}/lib"
		  system "ln -sf libcompat.1.dylib \
		    ${prefix}/lib/libcompat.dylib" }

contents	lib/libcompat.1.dylib \
		lib/libcompat.dylib
