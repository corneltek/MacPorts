# $Id: Portfile,v 1.2 2004/01/30 07:12:38 toby Exp $

PortSystem 1.0
name                freeride
version             0.6.0
revision            1
description         A Ruby IDE for the Ruby programming language.
long_description    A Ruby IDE written in Ruby using the FOX GUI toolkit. \
                    This IDE sports cross platform compatability, \
                    with an extensive plugin architecture.
maintainers         darwin@otierney.net
categories          devel ruby
platforms           darwin 
homepage            http://freeride.rubyforge.org/wiki/wiki.pl
extract.suffix      .tgz
master_sites        http://rubyforge.org/download.php/256/
checksums           md5 1fc5dbd376437ce6da7df303b0907244
depends_lib         lib:fxruby:fxruby
configure           {}
build               {}
destroot            {
                        file mkdir ${destroot}${prefix}/bin
                        system "cp -r ${worksrcpath} ${destroot}${prefix}/share/freeride"
                        system "chmod 777 ${destroot}${prefix}/share/freeride/config"
                        system "echo '#!/bin/sh' > ${destroot}${prefix}/bin/freeride"
                        system "echo \"cd ${prefix}/share/freeride\" >> ${destroot}${prefix}/bin/freeride"
                        system "echo \"RUBYLIB=${prefix}/lib/ruby/site_ruby/1.6:${prefix}/lib/ruby/site_ruby/1.6/powerpc-darwin7.0:${prefix}/lib/ruby/site_ruby ruby freeride.rb 2> /dev/null\" >> ${destroot}${prefix}/bin/freeride"
                        system "chmod 755 ${destroot}${prefix}/bin/freeride"
                    }
