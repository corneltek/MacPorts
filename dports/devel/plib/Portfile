# $Id: Portfile,v 1.1 2004/01/28 01:13:33 blb Exp $

PortSystem			1.0
name				plib
version				1.6.0
categories			devel graphics games
maintainers			blb@pobox.com
description			A Suite of Portable Game Libraries
long_description	\
	PLIB includes sound effects, music, a complete 3D engine, font \
	rendering, a GUI, networking, 3D math library and a collection of handy \
	utility functions.  All are 100% portable across nearly all modern \
	computing platforms.

platforms			darwin
homepage			http://plib.sourceforge.net/
master_sites		${homepage}/dist/
checksums			md5 b1fc5f042b1d1a30afe5e90d5630202e

depends_lib			lib:libglut:glut

configure.env		CPPFLAGS="-I${prefix}/include" LDFLAGS="-L${prefix}/lib"
configure.args		--with-x

post-destroot {
	file mkdir ${destroot}/${prefix}/share/doc/${name}
	cd ${worksrcpath}
	file copy AUTHORS COPYING KNOWN_BUGS NOTICE README \
		${destroot}/${prefix}/share/doc/${name}
}

variant darwin {
	post-extract {
		file copy -force /usr/share/libtool/config.guess ${worksrcpath}
		file copy -force /usr/share/libtool/config.sub ${worksrcpath}
	}
}

