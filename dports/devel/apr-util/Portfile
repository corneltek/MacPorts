# $Id: Portfile,v 1.6 2003/08/19 01:27:47 fkr Exp $

PortSystem 1.0
name		apr-util
version		APACHE_2_0_47
categories	devel
maintainers     jcorley1@nc.rr.com
description	utilities built with the apache group's portability library
long_description	apr-util is a library of useful utilities built with \
			and intended to be used with the Apache Portable Runtime.
homepage	http://apr.apache.org/
master_sites	http://distfiles.opendarwin.org/
distfiles	${distname}${extract.sufx} apr-${version}${extract.sufx}
patchfiles	patch-configure
depends_lib	lib:libapr-0.0:apr lib:libexpat.0:expat \
		lib:libiconv.2:libiconv
checksums	${distname}${extract.sufx} md5 da333c985fbae8b76372752df330eee0 \
                apr-${version}${extract.sufx} md5 a1bd1c36712d65b3cc1ef6aabfef37d5 

pre-patch {	system "cd ${worksrcpath} && \
                      ./buildconf --with-apr=../apr-${version}" }
configure.env	CPPFLAGS=-I${prefix}/include LDFLAGS=-L${prefix}/lib
configure.args	--with-apr=${prefix} --with-expat=${prefix} \
		--with-iconv=${prefix}
