platform darwin 11 {
    version             763.13
    distname            Libc-${version}
    checksums           rmd160  d2484c13b9ff5b401e732946e1929dd5ca8e9ad4 \
                        sha256  a1d88010d04f7bc3af3b52d61aacdf0c6826aa0cfa2814e65bdef365cae28bc9

