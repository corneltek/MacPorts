# $Id: Portfile,v 1.4 2003/11/27 09:24:08 mww Exp $

PortSystem 1.0

name		automake
version		1.7.9
categories	devel
maintainers	mww@opendarwin.org
description	the gnu automake utility for generating Makefile.in
platforms	darwin freebsd
long_description	Automake is a tool for automatically generating \
		Makefile.in files from files called Makefile.am. Each \
		Makefile.am is basically a series of make variable \
		definitions, with rules being thrown in occasionally. The \
		generated Makefile.in files are compliant with the GNU \
		Makefile standards. 

homepage	http://www.gnu.org/software/automake/
master_sites	gnu
checksums	md5 571fd0b0598eb2a27dcf68adcfddfacb
use_bzip2	yes

depends_lib	bin:perl:perl5.8

configure.args	--infodir=${prefix}/share/info

test.run	yes
test.target	check

post-destroot	{
	file mkdir ${destroot}${prefix}/share/doc/${name}
	file copy ${worksrcpath}/AUTHORS ${worksrcpath}/COPYING \
		${worksrcpath}/ChangeLog ${worksrcpath}/ChangeLog.00 \
		${worksrcpath}/ChangeLog.01 ${worksrcpath}/ChangeLog.96 \
		${worksrcpath}/ChangeLog.98 ${worksrcpath}/INSTALL \
		${worksrcpath}/NEWS ${worksrcpath}/README ${worksrcpath}/TODO \
		${worksrcpath}/THANKS ${destroot}${prefix}/share/doc/${name}
}
