# $Id$

PortSystem          1.0
PortGroup           github 1.0

github.setup        jubatus jubatus-msgpack-rpc 0.4.3

categories          devel
maintainers         hum openmaintainer

description         modified msgpack-rpc for Jubatus

long_description    ${name} is ${description}.

homepage            http://msgpack.org/
platforms           darwin
license             Apache-2

dist_subdir         jubatus
checksums           rmd160  89d5bb8110600d160a3a21c8e408d9e72cbb8ea9 \
                    sha256  529522f7a0c52198408efe724a19f09b6c544f6cc9cf2a7e8ef15d0db84e6486

depends_build       port:autoconf port:automake port:libtool

depends_lib         port:msgpack \
                    port:jubatus-mpio

configure.dir       ${worksrcpath}/cpp
build.dir           ${configure.dir}

pre-configure {
    system -W ${configure.dir} "./bootstrap"
}

platform darwin {
    if {${os.major} >= 13} {
        build.args          CXXFLAGS="${configure.cxxflags} -std=c++11 -DMP_FUNCTIONAL_STANDARD -DMP_MEMORY_STANDARD -DMP_UNORDERED_MAP_STANDARD"
    } else {
        build.args          CXXFLAGS=${configure.cxxflags}
    }
}

post-destroot {
    # install an additional document.
    set docdir  ${prefix}/share/doc/${name}
    xinstall -d ${destroot}${docdir}
    xinstall -m 644 -W ${destroot.dir} \
        AUTHORS COPYING ChangeLog NOTICE README.md \
        ${destroot}${docdir}
}
