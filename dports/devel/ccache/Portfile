PortSystem 1.0
name		ccache
version		1.9
categories	devel
maintainers	ranger@befunk.com
description	object-file caching compiler wrapper
platforms	darwin freebsd
master_sites	http://ccache.samba.org/ftp/ccache/
checksums	md5 8e73f607accc13da52934303140d555e

post-install	{
		system "cd ${prefix}/bin; \
		ln -s ${prefix}/bin/ccache ${prefix}/bin/cc; \
		ln -s ${prefix}/bin/ccache ${prefix}/bin/gcc; \
		ln -s ${prefix}/bin/ccache ${prefix}/bin/gcc2; \
		ln -s ${prefix}/bin/ccache ${prefix}/bin/gcc3; \
		ln -s ${prefix}/bin/ccache ${prefix}/bin/c++; \
		ln -s ${prefix}/bin/ccache ${prefix}/bin/c++3; \
		ln -s ${prefix}/bin/ccache ${prefix}/bin/g++; \
		ln -s ${prefix}/bin/ccache ${prefix}/bin/g++2; \
		ln -s ${prefix}/bin/ccache ${prefix}/bin/g++3"
}

contents	bin/ccache \
		man/man1/ccache.1 \
		bin/cc \
		bin/gcc \
		bin/gcc2 \
		bin/gcc3 \
		bin/c++ \
		bin/c++3 \
		bin/g++ \
		bin/g++2 \
		bin/g++3
