# $Id: Portfile,v 1.6 2003/03/03 06:18:09 mij Exp $

package require port 1.0

name		subversion
version		0.14.5
categories	devel
maintainers	rooneg@electricjellyfish.net
description	a cvs like version control system, but without the suck
long_description	Subversion is a version control system designed to be as similar to cvs(1) as possible, while fixing many outstanding problems with cvs(1).
homepage	http://subversion.tigris.org/
platforms	darwin

master_sites	http://subversion.tigris.org/files/documents/15/1562/
distname	subversion-r3578

checksums	md5 f299fd3e23ee5ad62450ff964d7b25f8

depends_lib	lib:libexpat.0:expat lib:libneon.23:neon lib:libapr-0.0:apr

configure.type	gnu
configure.args	--without-berkeley-db \
		--with-neon=${prefix} \
		--with-apr=${prefix} \
		--with-apr-util=${prefix}

include		contents
