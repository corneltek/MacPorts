# $Id: Portfile,v 1.1 2003/09/26 09:47:18 mww Exp $

PortSystem 1.0

name		py-bzip2
version		1.1
categories	archivers
maintainers	mww@opendarwin.org
description	python interface to bzip2 library
long_description	python interface to the bz2 (bzip2) compression library

homepage	http://python-bz2.sourceforge.net/
master_sites	sourceforge:python-bz2
distname	python-bz2-${version}
checksums	md5 953868c0d290693a8fce21cf513aeac3

depends_lib	bin:python:python \
		lib:bzip2:bzip2

use_configure	no

build.cmd	python setup.py
build.target	build

destroot.cmd	python setup.py
destroot.destdir	--prefix=${destroot}${prefix}

post-destroot	{ system "cd ${worksrcpath} \
		&& install -m 755 -d ${destroot}${prefix}/share/doc/${name} \
		&& cp AUTHORS LICENSE LICENSE-PSF README NEWS PKG-INFO \
			${destroot}${prefix}/share/doc/${name}" }
