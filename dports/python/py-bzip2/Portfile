# $Id: Portfile,v 1.3 2003/11/16 18:24:44 mww Exp $

PortSystem 1.0

name		py-bzip2
version		1.1
categories	python archivers
maintainers	mww@opendarwin.org
description	python interface to bzip2 library
long_description	python interface to the bz2 (bzip2) compression library

homepage	http://python-bz2.sourceforge.net/
master_sites	sourceforge:python-bz2
distname	python-bz2-${version}
use_bzip2	yes
checksums	md5 5fb3d766dd8fe9f92c69f90a1502bf37

depends_lib	bin:python:python \
		lib:bzip2:bzip2

use_configure	no

build.cmd	python setup.py
build.target	build

destroot.cmd	python setup.py
destroot.destdir	--prefix=${destroot}${prefix}

post-destroot	{
	file mkdir ${destroot}${prefix}/share/doc/${name}
	file copy ${worksrcpath}/AUTHORS ${worksrcpath}/LICENSE \
		${worksrcpath}/LICENSE-PSF ${worksrcpath}/README \
		${worksrcpath}/NEWS ${worksrcpath}/PKG-INFO \
		${destroot}${prefix}/share/doc/${name}
}
