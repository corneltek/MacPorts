PortSystem          1.0
PortGroup           python 1.0

name                py-rasterio
version             0.15.1
revision            0
categories-append   gis
platforms           darwin
license             BSD

python.versions     27 34

maintainers         stromnov openmaintainer

description         Fast and direct raster I/O for Python programmers who use Numpy
long_description    ${description}

homepage            https://github.com/sgillies/rasterio
master_sites        http://pypi.python.org/packages/source/r/rasterio/

distname            rasterio-${version}

checksums           rmd160  45dfc6bfba0aae1a5bb44b3c102c679a4631083a \
                    sha256  94e9c2ee5e7ace69b257f2c55d1e75211cd2bf8ca2ac7f4faddfd14a011d2656

if {${name} ne ${subport}} {
    depends_build-append \
                        port:py${python.version}-cython

    depends_lib-append  port:py${python.version}-setuptools \
                        port:py${python.version}-numpy \
                        port:py${python.version}-click \
                        port:py${python.version}-affine \
                        port:py${python.version}-pyproj \
                        port:gdal

    if { ${python.version} < 34 } {
        depends_lib-append  port:py${python.version}-enum34
    }

    livecheck.type      none
} else {
    livecheck.type      regex
    livecheck.url       ${master_sites}
    livecheck.regex     {rasterio-(\d+(?:\.\d+)*)\.[tz]}
}
