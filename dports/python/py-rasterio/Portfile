    depends_build-append \
                        port:py${python.version}-setuptools
    depends_lib-append  port:py${python.version}-numpy \
                        port:gdal

    livecheck.type      none
} else {
    livecheck.type      regex
    livecheck.url       ${master_sites}
    livecheck.regex     {rasterio-(\d+(?:\.\d+)*)\.[tz]}
