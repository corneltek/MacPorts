distname            ${realname}-${version}

checksums           md5     8272ffdcec4537e58807a6dd3d4a60cd \
                    sha1    8b183067048537f6f01fd1c605e07253338fa7f9 \
                    rmd160  083656c2ad7a819810dab378c27bc1c83054ecf6

