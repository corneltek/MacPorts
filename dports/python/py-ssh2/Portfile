                    sha1    547296a7d0653f05930d1c616aebe6cb12bfd6f0 \
                    rmd160  773ddc95899b144716a65ec140767adaa4e392d6

python.versions 25 26 27
python.default_version 27

if {$subport != $name} {
    depends_lib-append  port:py${python.version}-crypto
}

