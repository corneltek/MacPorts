if {${name} != ${subport}} {
    depends_lib-append  port:icu

    patchfiles          patch-setup.py

    post-patch {
        reinplace "s|@PREFIX@|${prefix}|g" ${worksrcpath}/setup.py
    }

    livecheck.type      none
} else {
    livecheck.type      regex
    livecheck.url       [lindex ${master_sites} 0]
    livecheck.regex     PyICU-(\[0-9.\]+)${extract.suffix}
}
