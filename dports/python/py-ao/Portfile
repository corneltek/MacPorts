# $Id: Portfile,v 1.1 2004/01/18 14:48:35 mww Exp $

PortSystem 1.0

name		py-ao
version		0.81
categories	python
platforms	darwin
maintainers	mww@opendarwin.org
description	Python interface to libao, an audio device abstraction library
long_description	This is a wrapper for libao, an audio device \
			abstraction library. libao is available with \
			ogg/vorbis.

homepage	http://www.vorbis.com/
master_sites	http://www.vorbis.com/files/1.0.1/unix/py/
distname	pyao-${version}
checksums	md5 398069a5c5b2429e18e0461d7129d21a

depends_lib	bin:python:python \
		lib:libao:libao

configure.cmd	python config_unix.py
configure.pre_args	--prefix ${prefix}

build.cmd	python setup.py
build.target	build

destroot.cmd	python setup.py
destroot.destdir	--prefix=${destroot}${prefix}

post-destroot	{
	file mkdir ${destroot}${prefix}/share/doc/${name}
	file copy ${worksrcpath}/AUTHORS ${worksrcpath}/COPYING \
		${worksrcpath}/ChangeLog ${worksrcpath}/README \
		${destroot}${prefix}/share/doc/${name}
}
