PortSystem          1.0
PortGroup           python 1.0

name                py-pymongo
version             2.7.2
revision            0
categories-append   databases
platforms           darwin
license             Apache

python.versions     26 27 33 34

maintainers         stromnov openmaintainer

description         Python access to mongodb
long_description \
        The PyMongo distribution contains tools for interacting with \
        the Mongo database from Python.

homepage            http://www.mongodb.org/
master_sites        http://pypi.python.org/packages/source/p/pymongo/

distname            pymongo-${version}

checksums           rmd160  933fe74d1f3a9ce1315c19fd3000ca02cfa68ccb \
                    sha256  8fb45e3edec006f4b11580fc579bec7781a8b3201ce0abf31593f086070e51f6

if {${name} ne ${subport}} {
    depends_build-append    port:py${python.version}-setuptools
    post-destroot {
        xinstall -m 755 -d ${destroot}${python.prefix}/share/doc/${subport}
        xinstall -m 644 -W ${worksrcpath} README.rst \
            ${destroot}${python.prefix}/share/doc/${subport}
    }

    livecheck.type      none
} else {
    livecheck.type      regex
    livecheck.url       ${master_sites}
    livecheck.regex     {pymongo-(\d+(?:\.\d+)*)\.[tz]}
}
