                    sha256  eb4a2102a82603f94306be2081af0ddbbd6d9c21d65e1dc761f0fecffda4c831

if {${name} ne ${subport}} {
    depends_build-append    port:py${python.version}-setuptools
    post-destroot {
        xinstall -m 755 -d ${destroot}${python.prefix}/share/doc/${subport}
        xinstall -m 644 -W ${worksrcpath} README.rst \
            ${destroot}${python.prefix}/share/doc/${subport}
    }

    livecheck.type      none
} else {
    livecheck.type      regex
    livecheck.url       https://pypi.python.org/pypi/pymongo/json
    livecheck.regex     {pymongo-(\d+(?:\.\d+)*)\.[tz]}
}
