if {${name} ne ${subport} && [lsearch {25 26 31 32} ${python.version}] != -1} {
    version             2.5.15
    revision            0
    distname            kombu-${version}
    checksums           rmd160  b51f7f17ae18089a3b2ceb6d6ffd8b9835c33fca \
