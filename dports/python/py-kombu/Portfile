if {${name} ne ${subport}} {
    # py-kombu depends on pkg_resources module (part of setuptools)
    depends_lib-append  port:py${python.version}-setuptools
    livecheck.type      none
} else {
    livecheck.type      regex
    livecheck.url       ${master_sites}
    livecheck.regex     {kombu-(\d+(?:\.\d+)*)\.[tz]}
}
