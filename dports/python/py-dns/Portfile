# $Id: Portfile,v 1.5 2003/11/17 21:20:03 jkh Exp $

PortSystem 1.0

name		py-dns
version		2.3.0
categories	python net
maintainers	mww@opendarwin.org
description	module for performing DNS queries from python
long_description	py-dns provides a module for performing DNS queries \
			from python applications. 

homepage	http://pydns.sourceforge.net/
master_sites	sourceforge:pydns
checksums	md5 b79616da9e88abce88edf82b369ee58d
extract.suffix	.tgz
distname	pydns-${version}

depends_lib	bin:python:python

use_configure	no

build.cmd	python setup.py
build.target	build

destroot.cmd	python setup.py
destroot.destdir	--prefix=${destroot}${prefix}

post-destroot   {
	file mkdir ${destroot}${prefix}/share/doc/${name}
	file copy ${worksrcpath}/tests ${worksrcpath}/CREDITS.txt \
		${worksrcpath}/PKG-INFO ${worksrcpath}/README-guido.txt \
		${worksrcpath}/README.txt ${destroot}${prefix}/share/doc/${name}
}
