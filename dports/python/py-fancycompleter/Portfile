                        sha256  13e25da511c011cb48c8c59fd408774f0329b36d01ba7da8add486ae05b278d7

subport py25-fancycompleter {
    patchfiles          py25-exception-handling.patch
}
if {$name != $subport} {
    depends_lib-append      port:py${python.version}-repl
}

