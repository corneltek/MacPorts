# $Id: Portfile,v 1.4 2003/10/12 22:49:19 mww Exp $

PortSystem 1.0

name		py-objc
version		1.0b1
categories	python devel
maintainers	mww@opendarwin.org
description	bidirectional bridge between python and Objective C
long_description	The PyObjC project aims to provide a bridge between \
	the Python and Objective-C programming languages.  The bridge is \
	intended to be fully bidirectional, allowing the Python programmer to \
	take full advantage of the power provided by various Objective-C based \
	toolkits and the Objective-C programmer transparent access to Python \
	based functionality.

homepage	http://pyobjc.sourceforge.net/
master_sites	sourceforge:pyobjc
distname	pyobjc-${version}
checksums	md5 707f9f524f8353e342ae1ca8ed09ec94

depends_lib	bin:python:python

use_configure	no

build.cmd	python setup.py
build.target	build

destroot.cmd	python setup.py
destroot.destdir	--prefix=${destroot}${prefix}
post-destroot	{ system "cd ${worksrcpath} \
		&& install -m 755 -d \
			${destroot}${prefix}/share/doc/${name}/html \
		&& cp ChangeLog HISTORIC.txt Install.html Install.txt \
			License.txt NEWS PKG-INFO README.txt ReadMe.html \
			${destroot}${prefix}/share/doc/${name} \
		&& cp -r Doc/* ${destroot}${prefix}/share/doc/${name}/html \
		&& install -m 755 -d \
			${destroot}${prefix}/share/doc/${name}/examples \
		&& cp -r Examples/* \
			${destroot}${prefix}/share/doc/${name}/examples" }

