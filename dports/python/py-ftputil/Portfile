# $Id: Portfile,v 1.2 2004/01/26 18:35:14 mww Exp $

PortSystem 1.0

name		py-ftputil
version		1.1.3
categories	python
platforms	darwin
maintainers	mww@opendarwin.org
description	high level Python interface to the ftplib module
long_description	The module ftputil is a high-level interface to the \
			ftplib module. The FTPHost objects generated from it \
			allow many operations similar to those of os and \
			os.path.

homepage	http://www.ndh.net/home/sschwarzer/python/python_software.html
master_sites	http://www.ndh.net/home/sschwarzer/download/
distname	ftputil-${version}
checksums	md5 0735fab349cd819c24664e0d8cdb4268
use_zip		yes

depends_lib	bin:python:python

post-patch	{
	file copy ${filespath}/setup.py ${worksrcpath}
	reinplace "s|VERSION|${version}|g" ${worksrcpath}/setup.py
	file delete ${worksrcpath}/UserTuple.py ${worksrcpath}/_mock_ftplib.py \
		${worksrcpath}/_test_ftputil.py
}

use_configure	no

build.cmd	python setup.py
build.target	build

destroot.cmd	python setup.py
destroot.destdir	--prefix=${destroot}${prefix}

post-destroot	{
	file mkdir ${destroot}${prefix}/share/doc/${name}
	file copy ${worksrcpath}/ftputil.txt \
		${destroot}${prefix}/share/doc/${name}
}
