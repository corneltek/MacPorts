if {$subport != $name} {
post-destroot {
    set egg-info ${destroot}${python.pkgd}/oauth2client-${version}-py${python.branch}.egg-info
    foreach d [glob -dir ${egg-info} *] {
        file attributes ${d} -permissions 0644
    }
}
}

