# $Id: Portfile,v 1.1 2004/01/13 21:06:30 mww Exp $

PortSystem 1.0

name		py-ctypes
version		0.6.2
categories	python
platforms	darwin
maintainers	mww@opendarwin.org
description	create and manipulate C data types in Python
long_description	ctypes is a Python package to create and manipulate C \
			data types in Python, and to call functions in dynamic \
			link libraries/shared dlls. It allows wrapping these \
			libraries in pure Python.

homepage	http://starship.python.net/crew/theller/ctypes/
master_sites	sourceforge:ctypes
distname	ctypes-${version}
checksums	md5 6abeef042e407a062a8698dd37f3b5c8

depends_lib	lib:libffi:libffi \
		bin:python:python

use_configure	no

build.env	CFLAGS=-I${prefix}/include \
		LDFLAGS=-L${prefix}/lib
build.cmd	python setup.py
build.target	build

test.run	no
test.dir	${worksrcpath}
test.cmd	${build.cmd}
test.target	test

destroot.cmd	${build.cmd}
destroot.destdir	--prefix=${destroot}${prefix}

post-destroot	{
	file mkdir ${destroot}${prefix}/share/doc/
	file copy ${worksrcpath}/docs ${destroot}${prefix}/share/doc/${name}
	file copy ${worksrcpath}/samples ${destroot}${prefix}/share/doc/${name}
}
