    depends_run		bin:dot:graphviz
    patchfiles		patch-setup.py.diff
    
   post-patch {
       reinplace "s|@@DIRECTORY@@|share/doc/${subport}|g" ${worksrcpath}/setup.py
   }

    depends_lib-append	port:py${python.version}-parsing
