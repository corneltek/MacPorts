    set docdir ${destroot}${prefix}/share/doc/${name}-${version}
    xinstall -d ${docdir}
    xinstall -m 644 -W ${worksrcpath} \
        LICENSE.txt \
        README.txt \
        INSTALL.txt \
        ${docdir}
}
