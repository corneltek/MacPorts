# $Id: Portfile,v 1.1 2003/12/20 14:36:25 mww Exp $

PortSystem 1.0

name		py-gnupg
version		0.3.2
categories	python
platforms	darwin
maintainers	mww@opendarwin.org
description	GnuPGInterface is a Python module to interface with GnuPG
long_description	GnuPGInterface is a Python module to interface with \
			GnuPG. It concentrates on interacting with GnuPG via \
			filehandles, providing access to control GnuPG via \
			versatile and extensible means.

homepage	http://py-gnupg.sourceforge.net/
master_sites	sourceforge
distname	GnuPGInterface-${version}
checksums	md5 d4627d83446f96bd8c22f8d15db3f7c2
patchfiles	patch-setup.py.diff

depends_lib	bin:python:python \
		lib:gnupg:gnupg

post-patch	{
	reinplace "s|VERSION|${version}|g" ${worksrcpath}/setup.py
}

use_configure	no

build.cmd	python setup.py
build.target	build

test.run	yes
test.cmd	python unittests.py
test.target

destroot.cmd	python setup.py
destroot.destdir	--prefix=${destroot}${prefix}

post-destroot	{
	file mkdir ${destroot}${prefix}/share/doc/${name}
	file copy ${worksrcpath}/COPYING ${worksrcpath}/ChangeLog \
		${worksrcpath}/MANIFEST ${worksrcpath}/NEWS \
		${worksrcpath}/PKG-INFO ${worksrcpath}/README \
		${worksrcpath}/THANKS ${destroot}${prefix}/share/doc/${name}
}
