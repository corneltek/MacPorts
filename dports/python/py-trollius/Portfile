distname            trollius-${version}

checksums           rmd160  5a4e320732d15fe7a73313534623d658bb157e82 \
                    sha256  4f562c56a6fffc98e4946aafe56e4d0d7449aa4b8317aa2da2849537d269e2c8

if {${name} ne ${subport}} {
    depends_build-append \
                        port:py${python.version}-setuptools

    if {${subport} eq "py27-trollius"} {
        depends_lib-append  port:py${python.version}-futures
    }

    livecheck.type      none
} else {
    livecheck.type      regex
    livecheck.url       ${master_sites}
    livecheck.regex     {trollius-(\d+(?:\.\d+)*)\.[tz]}
}
