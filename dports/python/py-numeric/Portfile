# $Id: Portfile,v 1.7 2003/12/21 22:07:10 mww Exp $

PortSystem 1.0

name		py-numeric
version		23.1
categories	python devel math
maintainers	mww@opendarwin.org
platforms	darwin
description	fast numerical array language for python
long_description	Numerical Python adds a fast, compact, \
			multidimensional array language facility to Python.

homepage	http://www.pfdubois.com/numpy/
master_sites	sourceforge:numpy
distname	Numeric-${version}
checksums	md5 5cd24ed20627f5cbc822a2bed8ff27e9

depends_lib	bin:python:python

use_configure	no

variant darwin	{
	build.env	LDFLAGS="-framework vecLib"
}

build.cmd	python setup.py
build.target	build

destroot.cmd	python setup.py
destroot.destdir	--prefix=${destroot}${prefix}

set doc		${destroot}${prefix}/share/doc/${name}
post-destroot	{
	file mkdir ${doc}/dotblas ${doc}/MA ${doc}/RNG
	file copy ${worksrcpath}/Demo ${worksrcpath}/README \
		${worksrcpath}/PKG-INFO ${worksrcpath}/changes.txt ${doc}
	file copy ${worksrcpath}/Packages/dotblas/doc/README.html ${doc}/dotblas
	file copy ${worksrcpath}/Packages/MA/Legal.htm \
		${worksrcpath}/Packages/MA/Demo \
		${worksrcpath}/Packages/MA/changes.txt ${doc}/MA
	file copy ${worksrcpath}/Packages/RNG/Legal.htm ${doc}/RNG
}
