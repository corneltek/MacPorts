# $Id: Portfile,v 1.1 2003/09/20 01:09:41 mww Exp $

PortSystem 1.0

name		py-jabber
version		0.4-0
categories	net
maintainers	mww@opendarwin.org
description	python module for the jabber instant messaging protocol
long_description	jabber.py is a python module for the jabber instant \
		messaging protocol. jabber.py deals with the xml parsing and \
		socket code, leaving the programmer to concentrate on \
		developing quality jabber based applications with python.

homepage	http://www
master_sites	sourceforge:jabberpy
distfiles	jabberpy${version}${extract.sufx}
checksums	md5 4fc5e10c83bb12e61fbc36bb4424ad79

depends_lib	bin:python:python

configure	{}

set worksrcpath	${workpath}/jabberpy${version}

build.dir	${worksrcpath}
build.cmd	python setup.py
build.target	build

destroot.cmd	python setup.py
destroot.target	install
destroot.args	--prefix=${destroot}${prefix}
destroot.destdir

