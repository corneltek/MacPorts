use_configure       no

variant carbon description { Install pyphant with carbon support } {

}

pre-destroot {
    if {[variant_isset carbon]} {
        file copy ${filespath}/pyphant.quartz ${destroot}${prefix}/bin
        file rename ${destroot}${prefix}/bin/pyphant.quartz ${destroot}${prefix}/bin/pyphant
    } else {
        file copy ${filespath}/pyphant ${destroot}${prefix}/bin
        reinplace "s|@APPDIR@|${applications_dir}|" ${destroot}${prefix}/bin/pyphant
    }
    reinplace "s|@PREFIX@|${prefix}|" ${destroot}${prefix}/bin/pyphant
}
