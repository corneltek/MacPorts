                    sha256  d59793f9b255bd00de800b97f9a50cce4fc8a44c205f7defa5bb7d691d13b852

python.versions     24 25 26 27 31 32 33

if {${name} != ${subport}} {
    livecheck.type      none
} else {
    livecheck.type      regex
    livecheck.url       ${master_sites}
    livecheck.regex     "six-(\\d+(\\.\\d+){2})${extract.suffix}"
