# $Id: Portfile,v 1.3 2003/10/24 00:02:53 mww Exp $

PortSystem 1.0

name		py-mhash
version		1.2
categories	python devel security
maintainers	mww@opendarwin.org
description	python interface to the mhash library
long_description	python interface to the mhash library

homepage	http://mhash.sourceforge.net/
master_sites	sourceforge:mhash
distname	python-mhash-${version}
checksums	md5 b82467ec28cec6ca3258c06cc0ee3e88
patchfiles	patch-mhash.c.diff

depends_lib	bin:python:python \
		lib:mhash:mhash

use_configure	no

build.env	CPPFLAGS="-I${prefix}/include" \
		LDFLAGS="-L${prefix}/lib"
build.cmd	python setup.py
build.target	build

destroot.cmd	python setup.py
destroot.destdir	--prefix=${destroot}${prefix}

post-destroot	{ system "cd ${worksrcpath} \
		&& install -m 755 -d ${destroot}${prefix}/share/doc/${name} \
		&& cp AUTHORS LICENSE MANIFEST.in NEWS PKG-INFO README \
			${destroot}${prefix}/share/doc/${name}" }
