checksums           rmd160  06be7b18484f0dd685543f41b581559c6c5c299c \
                    sha256  7746806ff94f1e8c1e843644c6bbd3b9aaeb1203c2eaf38879adc23dbd5c35bb

if {${name} ne ${subport}} {
    depends_lib-append     path:lib/libzmq.dylib:zmq

    post-patch {
        set setup_cfg ${worksrcpath}/setup.cfg
        file copy ${worksrcpath}/setup.cfg.template ${setup_cfg}
        reinplace "s|/usr/local|${prefix}|g" ${setup_cfg}
    }

    livecheck.type      none
} else {
    livecheck.type      regex
    livecheck.url       https://pypi.python.org/pypi/pyzmq/json
    livecheck.regex     {pyzmq-(\d+(?:\.\d+)*)\.[tz]}
}
