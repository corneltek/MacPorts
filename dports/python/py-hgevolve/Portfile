# $Id$

PortSystem              1.0
PortGroup               python 1.0
PortGroup               bitbucket 1.0

set realname            evolve
bitbucket.setup         marmoute mutable-history 3.0.0
name                    py-hg$realname
categories-append       devel
platforms               darwin
license                 GPLv2
maintainers             sean openmaintainer
supported_archs         noarch

description             Mutable history for mercurial
long_description        This extension provides several commands to mutate history \
                        and deal with issues it may raise.

checksums               rmd160  61f3f0b243c012747cbe213ac19ec262544c11b7 \
                        sha256  c042d82224b63a1bc970859c5deaced310afd4fc1aea0ad296ed2712aa966b97

python.versions         27

if {$subport != $name} {
    depends_lib         path:bin/hg:mercurial

    post-destroot {
        file delete ${destroot}${python.pkgd}/hgext/__init__.py
        file delete ${destroot}${python.pkgd}/hgext/__init__.pyc
    }

    notes               "
To enable ${realname}, add the following to your ~/.hgrc:

\[extensions\]
${realname} = ${python.pkgd}/${realname}
"

    livecheck.type      none
}
