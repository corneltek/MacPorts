    depends_lib-append  port:py${python.version}-distribute

    livecheck.type      none
} else {
    livecheck.type      regex
    livecheck.url       ${master_sites}
    livecheck.regex     "requests-(\\d+(?:\\.\\d+)*)${extract.suffix}"
