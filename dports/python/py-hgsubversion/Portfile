PortSystem              1.0
PortGroup               python 1.0
PortGroup               bitbucket 1.0

set realname            hgsubversion
bitbucket.setup         durin42 ${realname} 26e9fd21f3bf
name                    py-${realname}
version                 1.5.20130102
categories-append       devel
platforms               darwin
maintainers             sean openmaintainer
supported_archs         noarch
license                 GPL-2+

description             hgsubversion is a Mercurial extension for \
                        working with Subversion (svn) repositories.
long_description        ${description}

checksums               rmd160  5ef036eb73245b35932ef7d2d78cea121ec24602 \
                        sha256  2a7df32314bb973c64e59e808ba5867a2bef72b71de1994d3d297d8de985e346

python.versions         27

if {$subport != $name} {
    depends_lib         path:bin/hg:mercurial \
                        port:py${python.version}-subvertpy

    notes               "
To enable ${realname}, add the following to your ~/.hgrc:

\[extensions\]
${realname} = ${python.pkgd}/${realname}
"

    livecheck.type      none
}
