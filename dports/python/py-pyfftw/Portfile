if {${subport} == ${name}} {
    livecheck.type      regex
    livecheck.url       {http://pypi.python.org/pypi?:action=doap&name=pyFFTW}
    livecheck.regex     {<release><Version><revision>([^<]+)</revision></Version></release>}
