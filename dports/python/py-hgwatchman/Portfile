PortSystem          1.0
PortGroup           python 1.0
PortGroup           bitbucket 1.0

set realname        hgwatchman
bitbucket.setup     facebook ${realname} 0.4.2
name                py-${realname}
categories-append   devel
platforms           darwin
maintainers         sean openmaintainer
supported_archs     noarch
license             GPL-2+

description         Integrates the file-watching program watchman with \
                    Mercurial to produce faster status results.
long_description    ${description}

checksums           rmd160  28da8c8ff3f5e5fd53a778098986cd7c56f8b10b \
                    sha256  6acfdb99d95565bac7fe607fb6e14ae2e458497d70a8f00260f7a980da900ec4

python.versions     27

if {${name} ne ${subport}} {
    depends_lib-append  path:bin/hg:mercurial \
                        port:watchman

    notes               "
To enable ${realname}, add the following to your ~/.hgrc:

\[extensions\]
${realname} =
"

    livecheck.type      none
}
