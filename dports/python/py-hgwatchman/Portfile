PortSystem          1.0
PortGroup           python 1.0
PortGroup           bitbucket 1.0

set realname        hgwatchman
bitbucket.setup     facebook ${realname} 0.4.3
name                py-${realname}
categories-append   devel
platforms           darwin
maintainers         sean openmaintainer
supported_archs     noarch
license             GPL-2+

description         Integrates the file-watching program watchman with \
                    Mercurial to produce faster status results.
long_description    ${description}

checksums           rmd160  c54e4c36fff24d72f9eb74a9454b97c9e155f07f \
                    sha256  dee7aed21fd4bafee24b3c93a21f4cba0a5e273c751206478b00997e1a47cd51

python.versions     27

if {${name} ne ${subport}} {
    depends_lib-append  path:bin/hg:mercurial \
                        port:watchman

    notes               "
To enable ${realname}, add the following to your ~/.hgrc:

\[extensions\]
${realname} =
"

    livecheck.type      none
}
