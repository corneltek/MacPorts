# $Id: Portfile,v 1.1 2003/08/02 20:41:09 waqar Exp $

PortSystem 1.0
name            libmcrypt
version         2.5.7
categories	security
maintainers    	bchesneau@mac.com
description	The encryption library used by mcrypt 
long_description libmcrypt is the library which implements all the \
	algorithms and modes found in mcrypt. 
platforms	darwin

master_sites	ftp://mcrypt.hellug.gr/pub/crypto/mcrypt/libmcrypt/ \
		http://gd.tuwien.ac.at/privacy/mcrypt/libmcrypt/ \
		http://www.mirrors.wiretapped.net/security/cryptography/libraries/mcrypt/libmcrypt/

checksums	libmcrypt-2.5.7.tar.gz md5 b1be163143f8e8ed0474beeb642b3bad
				
configure.env	LDFLAGS=-L${prefix}/lib CPPFLAGS=-I${prefix}/include
configure.args	--disable-posix-threads

variant darwin {
	depends_lib-append	lib:libdl.1:dlcompat
}








