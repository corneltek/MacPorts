# $Id$

PortSystem 1.0

name                libquicktime
conflicts           libquicktime-devel
version             1.2.4
categories          multimedia
platforms           darwin
maintainers         mww openmaintainer
license             LGPL-2.1
description         library for reading and writing quicktime files
long_description    ${description}

homepage            http://libquicktime.sourceforge.net/
master_sites        sourceforge
checksums           md5     81cfcebad9b7ee7e7cfbefc861d6d61b \
                    sha1    7008b2dc27b9b40965bd2df42d39ff4cb8b6305e \
                    rmd160  4daed02aa99903218af6844e879334cd1ae9e018

depends_lib         port:gettext port:jpeg port:libiconv port:libpng port:zlib \
                    path:lib/libavcodec.dylib:ffmpeg port:faac port:faad2 \
                    port:libvorbis port:libogg port:lame port:xorg-libXv \
                    port:xorg-libXaw

configure.args      --without-gtk --without-alsa \
                    --with-libjpeg --with-libpng --with-ffmpeg \
                    --with-vorbis=${prefix} \
                    --with-libiconv-prefix=${prefix} \
                    --with-libintl-prefix=${prefix} \
                    --without-doxygen \
                    --enable-gpl

platform darwin 8 {
    # Tiger's host ld is ancient (cctools based) and won't properly link this project
    # Use apple-gcc42 with our ld64 to get it to link
    depends_build port:apple-gcc42 port:ld64
    depends_skip_archcheck-append apple-gcc42 ld64

    configure.compiler apple-gcc-4.2
}

