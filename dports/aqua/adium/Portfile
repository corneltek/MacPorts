# $Id: Portfile,v 1.3 2004/02/20 09:40:30 toby Exp $

PortSystem 1.0
name             adium
version          cvs
categories       aqua net
maintainers      toby@opendarwin.org
description      The best multi-IM client for Mac OS X
long_description Adium rules!

fetch.type       cvs
cvs.root         :pserver:anonymous@cvs.sourceforge.net:/cvsroot/adium
cvs.module       ${name}
distname         ${cvs.module}

configure        {}

build.type       pbx
build.target
build.args       -buildstyle Deployment -target Adium

destroot {
    set appPath ${destroot}/Applications/DarwinPorts
    file mkdir ${appPath}
    system "ditto -v -rsrcFork ${worksrcpath}/build/Adium.app ${appPath}/Adium.app"
}
