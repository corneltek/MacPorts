PortSystem 1.0
name		pict2pdf
version		1.1
categories	graphics
maintainers	prahl@ece.ogi.edu
description	Vector-to-vector conversion of PICT files to PDF
platforms	darwin
master_sites	http://osdn.dl.sourceforge.net/sourceforge/pict2pdf/ \
		http://unc.dl.sourceforge.net/sourceforge/pict2pdf/
checksums       md5 c37627f7483509887f70d07d3f798208
configure       {}
build.args      PREFIX=${prefix}

install		{ cd ${worksrcpath}
		  system "install -o root -m 755 -d ${prefix}/bin"
		  system "install -o root -m 755 -d ${prefix}/man/man1"
		  system "install -o root -m 755 -c pict2pdf ${prefix}/bin"
		  system "install -o root -m 644 -c pict2pdf.1 \
		    ${prefix}/man/man1" }

contents	bin/pict2pdf \
		man/man1/pict2pdf.1
