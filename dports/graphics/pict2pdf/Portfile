# $Id: Portfile,v 1.6 2003/10/13 21:54:51 waqar Exp $

PortSystem 1.0
name		pict2pdf
version		1.1
categories	graphics
maintainers	prahl@ece.ogi.edu
description	Vector-to-vector conversion of PICT files to PDF
long_description	\
	pict2pdf converts files in Apple's PICT format to Adobe's PDF \
	format. The conversion retains any vector information in \
	the PICT image.  
platforms	darwin
master_sites	http://osdn.dl.sourceforge.net/sourceforge/pict2pdf/ \
		http://unc.dl.sourceforge.net/sourceforge/pict2pdf/
checksums       md5 c37627f7483509887f70d07d3f798208
use_configure   no
build.args      PREFIX=${prefix}
destroot	{ cd ${worksrcpath}
		  system "install -m 755 -d ${destroot}${prefix}/bin"
		  system "install -m 755 -d ${destroot}${prefix}/man/man1"
		  system "install -m 755 -c pict2pdf ${destroot}${prefix}/bin"
		  system "install -m 644 -c pict2pdf.1 \
		    ${destroot}${prefix}/man/man1" }

