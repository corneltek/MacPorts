PortSystem 1.0

name		vips
version		7.40.2
revision        1
description	VIPS is an image processing library.
long_description	VIPS is an image processing library. It's good for \
			large images and for colour.
maintainers	gmail.com:jcupitt
categories	graphics
platforms	darwin
license		LGPL-2.1+
homepage	http://www.vips.ecs.soton.ac.uk
master_sites	${homepage}/supported/current/

checksums	rmd160  3abac376ed8f842b9a1ae5f00260a45cd5d38aff \
		sha256  fd90faa0ccdf5397ca9c2c4944fcfefdfab23b292a74d23443a25d7752d30604

configure.args	--enable-gtk-doc

depends_build	port:pkgconfig \
		port:gtk-doc

depends_lib	port:libtool \
		port:fftw-3 \
		path:lib/pkgconfig/glib-2.0.pc:glib2 \
		port:jpeg \
		port:libpng \
		port:tiff \
		port:ImageMagick \
		port:openexr \
		port:openslide \
		port:orc \
		port:cfitsio \
		port:matio \
		port:lcms2 \
		port:zlib \
		path:lib/pkgconfig/pango.pc:pango \
		port:libgsf \
		port:libexif \
		port:libxml2

livecheck.type	regex
livecheck.url	${homepage}/supported/current/
livecheck.regex	>${name}-(\\d+(?:\\.\\d+)*)${extract.suffix}<
