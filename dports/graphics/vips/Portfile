		port:fftw-3 \
		path:lib/pkgconfig/glib-2.0.pc:glib2 \
		port:jpeg \
		port:libpng \
		port:tiff \
		port:ImageMagick \
		port:openexr \
		port:openslide \
		port:orc \
		port:cfitsio \
		port:matio \
		port:lcms2 \
		port:zlib \
		path:lib/pkgconfig/pango.pc:pango \
		port:libgsf \
		port:libexif \
		port:libxml2

livecheck.type	regex
livecheck.url	${homepage}/supported/current/
livecheck.regex	>${name}-(\\d+(?:\\.\\d+)*)${extract.suffix}<
