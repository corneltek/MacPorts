PortSystem 1.0
name		gdk-pixbuf
version		0.18.0
categories	graphics
maintainers	mij@opendarwin.org
description	generic image handling library for Gtk+ programs
platforms	darwin
master_sites	ftp://ftp.gnome.org/pub/gnome/sources/gdk-pixbuf/0.18/
use_bzip2	yes
checksums	md5 104053625e0344fe9a464905043e950c

depends_build	lib:libtiff.3:tiff lib:libjpeg.9:jpeg lib:libpng.3:libpng \
		lib:libglib.1:glib lib:libgtk.1:gtk lib:libdl.1:dlcompat

patchfiles	patch-Makefile.in patch-configure \
		patch-gdk-pixbuf-Makefile.in patch-ltmain.sh

configure.env	CPPFLAGS="-I${prefix}/include" "CFLAGS=-L${prefix}/lib" \
		LIBS="-L${prefix}/lib"
configure.args	--with-html-dir=${prefix}/doc --disable-gtk-doc

