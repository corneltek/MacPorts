# $Id: Portfile,v 1.1 2004/02/09 05:46:12 blb Exp $

PortSystem			1.0
name				pfaedit
version				040204
categories			graphics fonts
maintainers			blb@pobox.com
description			An outline font editor for PostScript, TrueType and OpenType
long_description \
	PfaEdit allows you to create and modify postscript, truetype and \
	opentype fonts. You can save fonts in many different outline formats, \
	and generate bitmaps.

platforms			darwin

homepage			http://pfaedit.sourceforge.net/
master_sites		${homepage}

distname			pfaedit_full-${portversion}
extract.suffix		.tgz

checksums			md5 e49db4b75d2246c678dfb052b1e6a7bf

depends_lib			lib:libpng:libpng lib:libungif:libungif \
					lib:libz:zlib lib:libuninameslist:libuninameslist \
					bin:autotrace:autotrace lib:libX11:XFree86

worksrcdir			pfaedit-${portversion}

patchfiles			patch-pfaedit_Makefile.dynamic.in \
					patch-Unicode_Makefile.dynamic.in \
					patch-gdraw_Makefile.dynamic.in

configure.env		CPPFLAGS="-I${prefix}/include" LDFLAGS="-L${prefix}/lib"

destroot.destdir	prefix=${destroot}/${prefix} \
					mandir=${destroot}/${prefix}/share/man

post-destroot {
	xinstall -m 755 -d ${destroot}/${prefix}/share/doc/${name}
	xinstall -m 644 -W ${worksrcpath} COPYING LICENSE README README-MacOSX \
		${destroot}/${prefix}/share/doc/${name}
}

