# $Id: Portfile,v 1.4 2003/08/11 22:11:49 waqar Exp $

PortSystem 1.0
name		tgif
version		4.1.42
description	Basic vector drawing package
categories	x11 graphics
maintainers	mdales@mac.com
homepage	http://bourbon.usc.edu:8001/tgif/
platforms       darwin
master_sites	ftp://bourbon.usc.edu/pub/tgif/
distname	tgif-QPL-${portversion}
checksums	md5 83b1cd01b1570fbf71ea5994af87f42e
use_xmkmf	yes
worksrcdir      ${distname}
patchfiles	patch-Tgif.tmpl patch-Imakefile
post-patch {
        set path "${worksrcpath}"
	system "chmod 644 Tgif.tmpl"
        reinplace "s|PREFIX|${prefix}|g" "${path}/Tgif.tmpl" 
}

pre-destroot {
	set path "${worksrcpath}"
        reinplace "s|${prefix}|${destroot}${prefix}|g" "${path}/Makefile"
}

destroot.target	install install.man
