platforms       darwin

supported_archs noarch

build {}

distfiles
master_sites

pre-configure {
    ui_error " \
    This port has been replaced by the more up-to-date gimp-help-* series of ports.

    Please install one or more of the following ports instead:

        gimp-help-de
        gimp-help-en
        gimp-help-es
        gimp-help-fr
        gimp-help-it
        gimp-help-ja
        gimp-help-ko
        gimp-help-nl
        gimp-help-nn
        gimp-help-pl
        gimp-help-ru
        gimp-help-sv
        gimp-help-zh_CN
"
    return -code error
}

livecheck.type  none
