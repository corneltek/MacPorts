package require port 1.0
portname	libpng
portversion	1.2.4
categories	graphics
maintainers	eric@opendarwin.org
description	Library for manipulating PNG images
use_bzip2	yes
master_sites	http://www.libpng.org/pub/png/src/ \
		ftp://swrinde.nde.swri.edu/pub/png/src/ \
		ftp://ftp.simplesystems.org/pub/libpng/src/ \
		http://download.sourceforge.net/libpng/ \
		http://planetmirror.com/pub/sourceforge/libpng/
checksums	md5 bd37cfab53738ab648a7b0ee2450d7d5
configure	{
			cd ${workpath}/${worksrcdir}
			system "cp scripts/makefile.darwin Makefile"
			reinplace s|/usr/local|${prefix}| Makefile
		}

contents	bin/libpng-config \
		bin/libpng12-config \
		include/libpng12/png.h \
		include/libpng12/pngconf.h \
		include/png.h \
		include/pngconf.h \
		lib/libpng.3.1.2.4.dylib \
		lib/libpng.3.dylib \
		lib/libpng.a \
		lib/libpng.dylib \
		lib/libpng12.0.1.2.4.dylib \
		lib/libpng12.0.dylib \
		lib/libpng12.a \
		lib/libpng12.dylib \
		lib/pkgconfig/libpng.pc \
		lib/pkgconfig/libpng12.pc \
		man/man3/libpng.3 \
		man/man3/libpngpf.3 \
		man/man5/png.5
