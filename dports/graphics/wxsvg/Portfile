PortSystem          1.0
PortGroup           active_variants 1.1
PortGroup           wxWidgets 1.0

name                wxsvg
version             1.4.1
categories          graphics
license             wxwidgets-3
platforms           darwin
maintainers         mojca openmaintainer

description         C++ library based on wxWidgets to create, manipulate and render SVG files

long_description    ${description}

homepage            http://wxsvg.sourceforge.net/
master_sites        sourceforge:project/wxsvg/wxsvg/${version}

use_bzip2           yes

checksums           rmd160  579fcefdf1d663ba724c6def0c755318363b09cb \
                    sha256  f971e746a8ca4317e8245e5c5667caf99351759df06417bac2acd3f9e376b644

wxWidgets.use       wxWidgets-3.0

depends_build       path:bin/pkg-config:pkgconfig

depends_lib         path:lib/pkgconfig/cairo.pc:cairo \
                    port:expat \
                    path:lib/libavcodec.dylib:ffmpeg \
                    port:${wxWidgets.port}

require_active_variants cairo quartz

configure.args      --with-wxdir=${wxWidgets.wxdir}
