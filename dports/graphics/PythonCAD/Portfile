# $Id: Portfile,v 1.1 2004/01/23 04:33:44 blb Exp $

PortSystem			1.0
name				PythonCAD
version				DS1-R11
categories			graphics x11 python
maintainers			blb@pobox.com
description			Python-based CAD package
long_description \
	PythonCAD is an open-source CAD package designed around Python. As \
	such, it aims to be a fully scriptable and customizable CAD program. It \
	is initially designed to run under Linux, one of the BSD flavors, or Unix.

homepage			http://www.pythoncad.org/
master_sites		${homepage}/releases/

platforms			darwin
use_bzip2			yes
checksums			md5 dca504a2ff3d6cd9b6d7367067faa663

depends_lib			bin:python:python \
					path:lib/python2.3/site-packages/pygtk.py:py-gtk2

use_configure		no

build.cmd			python setup.py
build.target		build

destroot.cmd		python setup.py
destroot.destdir	--prefix=${destroot}${prefix}
post-destroot {
	file copy ${worksrcpath}/gtkpycad.py ${destroot}${prefix}/bin
	file mkdir ${destroot}${prefix}/share/doc/${name}
	file copy ${worksrcpath}/NEWS ${worksrcpath}/PKG-INFO \
		${worksrcpath}/INSTALL ${worksrcpath}/README ${worksrcpath}/prefs.py \
		${destroot}${prefix}/share/doc/${name}
}

