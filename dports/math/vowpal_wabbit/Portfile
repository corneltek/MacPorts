post-destroot {
    # install an additional document.
    set doc_dir ${destroot}${prefix}/share/doc/${name}
    xinstall -d ${doc_dir}
    xinstall -m 644 -W ${worksrcpath} \
        AUTHORS \
        COPYING \
        LICENSE \
        README.md \
        ${doc_dir}
}

