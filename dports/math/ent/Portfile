# $Id: Portfile,v 1.1 2003/12/27 16:38:29 mww Exp $

PortSystem	1.0
name		ent
version		19981020
categories	math security
maintainers	blb@pobox.com
description	Entropy calculation and analysis of putative random sequences.

long_description ${description}

platforms	darwin

homepage	http://www.fourmilab.ch/random/
master_sites	${homepage}
distname	random
use_zip		yes
checksums	md5 ccaa3fffd4d84d46e9b712d0c88f008c

worksrcdir	ent
pre-extract {
	extract.post_args	"-d ${worksrcpath}"
}

patchfiles	patch-Makefile

use_configure	no

build.target	ent

destroot {
	file mkdir "${destroot}/${prefix}/bin" \
		"${destroot}/${prefix}/share/doc/${name}"
	file copy "${worksrcpath}/ent" "${destroot}/${prefix}/bin/"
	file copy "${worksrcpath}/ent.html" \
		"${destroot}/${prefix}/share/doc/${name}"
}

