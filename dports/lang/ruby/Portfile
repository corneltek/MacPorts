checksums	md5 bf48d49dbd94b5c0eda5f75b3bfbac16

variant devel	{ fetch.type cvs
		  cvs.root :pserver:anonymous@cvs.ruby-lang.org:/src
		  cvs.module ruby
		  cvs.password anonymous
		  version 1.8.DEVEL
		  patchfiles-delete patch-configure patch-error.c
		  pre-configure { cd ${workpath}/ruby
		                  system "autoconf" }
		  worksrcdir ruby }
