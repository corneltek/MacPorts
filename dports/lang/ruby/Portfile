# $Id: Portfile,v 1.13 2004/01/15 05:36:06 jkh Exp $

PortSystem 1.0
name		ruby
version		1.8.1
categories	lang
maintainers	eric@opendarwin.org
description	Powerful and clean object-oriented scripting language
platforms	darwin

checksums	md5 5d52c7d0e6a6eb6e3bc68d77e794898e
master_sites	http://xyz.lcs.mit.edu/ruby/1.8/ \
		http://www.xs4all.nl/~hipster/lib/mirror/ruby/1.8/ \
		http://mirrors.sunsite.dk/ruby/1.8/ \
		http://ruby.mirror.easynet.be/1.8/ \
		http://core.ring.gr.jp/archives/lang/ruby/1.8/ \
		ftp://ftp.ruby-lang.org/pub/ruby/1.8/

depends_lib	lib:libreadline.4.3:readline

configure.env   CFLAGS="-O -pipe -I${prefix}/include" \
                CPPFLAGS="-O -pipe -I${prefix}/include" \
                LDFLAGS="-L${prefix}/lib"

variant devel {
	version 1.9
	fetch.type cvs
	cvs.root  :pserver:anonymous@cvs.ruby-lang.org:/src
	cvs.password anonymous
	cvs.module ruby
	configure.cmd "autoconf;configure"
	worksrcdir ruby
}
