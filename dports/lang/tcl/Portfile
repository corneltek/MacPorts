# $Id: Portfile,v 1.12 2004/01/19 10:05:54 jkh Exp $

PortSystem 1.0
name			tcl
version			8.4.5
# Tk (x11/tk) port depends on this version
revision		0
categories		lang
maintainers		jkh@opendarwin.org
description		Tool Command Language
platforms		darwin
master_sites		sourceforge
distname		${portname}${portversion}-src
worksrcdir		${portname}${portversion}/unix
checksums		md5 3fb354dba28166a1004f9103553a3974
destroot.destdir	INSTALL_ROOT=${destroot}
configure.args		--mandir=${prefix}/share/man

post-destroot {
	cd ${destroot}${prefix}/bin
	system "ln -s ${prefix}/bin/tclsh8.4 tclsh"
}
