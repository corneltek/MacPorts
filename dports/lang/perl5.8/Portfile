PortSystem 1.0
name				perl5.8
version				5.8.0
categories			lang
maintainers			mike+perlport@gene-hacker.net
description			Perl 5.8.0
platforms			darwin freebsd
master_sites		http://www.cpan.org/src/
distname			stable
checksums			stable${extract.sufx} md5 d9bdb180620306023fd35901a2878b62


depends_lib			lib:libdb:db4 
			
worksrcdir			perl-${portversion}

configure.cmd 		sh Configure
unset configure.pre_args
	
configure.args		-des -Dprefix='${prefix}' -DDEBUGGING \
					  -Dccflags=-I'${prefix}/include' -Dldflags=-L'${prefix}/lib'

 
# Contents is a space delimited list of all files installed by the port.
# If you do not specify a full path, the path is assumed to be relative to
# ${prefix}

include contents

variant threads {
	configure.args-append -Dusethreads
	}
